.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 40rpx;
}

.header {
  background: #ffffff;
  padding: 40rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #333333;
  margin-bottom: 12rpx;
}

.subtitle {
  display: block;
  font-size: 26rpx;
  color: #999999;
}

.actions {
  padding: 24rpx 32rpx;
}

.btn-primary {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 44rpx;
  color: #ffffff;
  font-size: 32rpx;
  font-weight: 500;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
}

.btn-primary[disabled] {
  opacity: 0.6;
}

.table-list {
  padding: 0 32rpx;
}

.table-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  border: 1rpx solid #f0f0f0;
}

.table-info {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.table-number {
  font-size: 32rpx;
  font-weight: 600;
  color: #333333;
}

.table-status {
  font-size: 24rpx;
  color: #52c41a;
  background: #f6ffed;
  padding: 8rpx 16rpx;
  border-radius: 8rpx;
}

.table-status.pending {
  color: #faad14;
  background: #fffbe6;
}

.qr-code-area {
  display: flex;
  justify-content: center;
  align-items: center;
  padding: 32rpx;
  background: #fafafa;
  border-radius: 12rpx;
  margin-bottom: 24rpx;
}

.qr-code {
  width: 400rpx;
  height: 400rpx;
}

.table-actions {
  display: flex;
  gap: 16rpx;
}

.btn-secondary {
  flex: 1;
  height: 72rpx;
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 36rpx;
  color: #333333;
  font-size: 28rpx;
}

.btn-secondary::after {
  border: none;
}

.empty {
  text-align: center;
  padding: 120rpx 0;
  color: #999999;
  font-size: 28rpx;
}
