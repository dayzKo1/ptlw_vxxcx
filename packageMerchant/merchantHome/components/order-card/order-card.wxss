.order-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  position: relative;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
}

.order-no-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.order-no {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.order-type-tag {
  font-size: 20rpx;
  color: #FF6B6B;
  background: #FFF0F0;
  padding: 2rpx 10rpx;
  border-radius: 4rpx;
}

.order-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.order-status {
  font-size: 22rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.status-0 { background: #FFF3E0; color: #FF9800; }
.status-1 { background: #E3F2FD; color: #2196F3; }
.status-2 { background: #FFF8E1; color: #FF9800; }
.status-3 { background: #E8F5E9; color: #4CAF50; }
.status-4 { background: #f5f5f5; color: #999; }
.status-5 { background: #FFEBEE; color: #F44336; }

.order-table {
  background: #FFF8E1;
  padding: 10rpx 16rpx;
  border-radius: 8rpx;
  margin-bottom: 12rpx;
}

.table-label {
  font-size: 22rpx;
  color: #666;
}

.table-number {
  font-size: 26rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-left: 8rpx;
}

.order-items {
  border-top: 1rpx solid #f5f5f5;
  padding-top: 12rpx;
}

.dish-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 6rpx 0;
  font-size: 24rpx;
}

.dish-name {
  flex: 1;
  color: #333;
}

.dish-quantity {
  color: #999;
  margin: 0 16rpx;
}

.dish-price {
  color: #FF6B6B;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 12rpx;
  padding-top: 12rpx;
  border-top: 1rpx solid #f5f5f5;
}

.order-total {
  display: flex;
  align-items: baseline;
  gap: 12rpx;
}

.total-label {
  font-size: 22rpx;
  color: #999;
}

.total-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.order-actions {
  display: flex;
  gap: 24rpx;
}

.action-text {
  font-size: 26rpx;
  color: #666;
  padding: 8rpx 20rpx;
  border-radius: 8rpx;
}

.action-text.primary {
  color: #fff;
  background: #FF6B6B;
  font-weight: 500;
}

.action-text.cancel {
  color: #999;
  background: #f5f5f5;
}

.action-text.disabled {
  color: #ccc;
  background: #f5f5f5;
}

.order-remark {
  margin-top: 12rpx;
  padding: 10rpx;
  background: #FFF8E1;
  border-radius: 8rpx;
  font-size: 22rpx;
}

.remark-label {
  color: #FF9800;
}

.remark-text {
  color: #666;
}

.auto-accepted-tag {
  position: absolute;
  top: 0;
  right: 0;
  background: #4CAF50;
  color: #fff;
  font-size: 18rpx;
  padding: 4rpx 12rpx;
  border-radius: 0 12rpx 0 12rpx;
}

.remark-label {
  color: #FF9800;
}

.remark-text {
  color: #333;
}