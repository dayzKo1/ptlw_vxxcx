.table-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 12rpx;
}

.table-number {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
}

.table-status {
  font-size: 22rpx;
  padding: 6rpx 16rpx;
  border-radius: 4rpx;
}

.table-status.occupied {
  background: #FFF3E0;
  color: #FF9800;
}

.table-status.idle {
  background: #E8F5E9;
  color: #4CAF50;
}

.table-info {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 12rpx;
  padding: 10rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.info-label {
  color: #999;
}

.info-text {
  color: #333;
}

/* 二维码区域样式 */
.qrcode-section {
  margin-bottom: 16rpx;
  padding: 16rpx;
  background: #f8f8f8;
  border-radius: 8rpx;
}

.qrcode-status {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.qrcode-label {
  font-size: 24rpx;
  color: #666;
}

.qrcode-status-text {
  font-size: 24rpx;
  padding: 4rpx 12rpx;
  border-radius: 4rpx;
}

.qrcode-status-text.generated {
  background: #E8F5E9;
  color: #4CAF50;
}

.qrcode-status-text.pending {
  background: #FFF3E0;
  color: #FF9800;
}

.qrcode-preview {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  border: 1rpx solid #eee;
}

.qrcode-img {
  width: 100%;
  height: 100%;
}

.table-actions {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.action-btn {
  flex: 1;
  min-width: 140rpx;
  font-size: 24rpx;
  padding: 12rpx 0;
  border-radius: 20rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.qrcode-btn {
  background: #E3F2FD;
  color: #2196F3;
}

.download-btn {
  background: #E8F5E9;
  color: #4CAF50;
}

.idle-btn {
  background: #FFF3E0;
  color: #FF9800;
}

.occupy-btn {
  background: #FFF3E0;
  color: #FF9800;
}

.delete-btn {
  background: #f5f5f5;
  color: #999;
}