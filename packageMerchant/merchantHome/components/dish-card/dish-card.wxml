<view class="dish-item">
  <view class="dish-image" bindtap="onEdit">
    <image src="{{dish.image || '/images/default-dish.png'}}" mode="aspectFill" lazy-load></image>
    <view class="status-badge {{dish.status === 1 ? 'online' : 'offline'}}">
      {{dish.status === 1 ? '上架' : '下架'}}
    </view>
  </view>
  <view class="dish-info" bindtap="onEdit">
    <view class="dish-name-row">
      <text class="dish-name">{{dish.name}}</text>
      <text class="tag hot" wx:if="{{dish.isHot}}">热销</text>
      <text class="tag new" wx:if="{{dish.isNew}}">新品</text>
    </view>
    <view class="dish-category">{{dish.categoryName || '未分类'}}</view>
    <view class="dish-price-row">
      <text class="dish-price">¥{{dish.price}}</text>
      <text class="spicy-level" wx:if="{{dish.spicyLevel > 0}}">
        {{['', '微辣', '中辣', '特辣', '变态辣'][dish.spicyLevel]}}
      </text>
    </view>
  </view>
  <view class="dish-actions">
    <button class="action-btn {{dish.status === 1 ? 'offline-btn' : 'online-btn'}}" catchtap="onToggleStatus">
      {{dish.status === 1 ? '下架' : '上架'}}
    </button>
    <button class="action-btn delete-btn" catchtap="onDelete">删除</button>
  </view>
</view>