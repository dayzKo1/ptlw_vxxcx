.dish-item {
  background: #fff;
  border-radius: 12rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.dish-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 8rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
  background: #f5f5f5;
}

.dish-image image {
  width: 100%;
  height: 100%;
}

.status-badge {
  position: absolute;
  top: 4rpx;
  right: 4rpx;
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.status-badge.online {
  background: #E8F5E9;
  color: #4CAF50;
}

.status-badge.offline {
  background: #FFEBEE;
  color: #F44336;
}

.dish-info {
  flex: 1;
  min-width: 0;
}

.dish-name-row {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.tag {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.tag.hot {
  background: #FFEBEE;
  color: #F44336;
}

.tag.new {
  background: #E3F2FD;
  color: #2196F3;
}

.dish-category {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

.dish-price-row {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-top: 8rpx;
}

.dish-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.spicy-level {
  font-size: 20rpx;
  color: #FF6B6B;
  background: #FFF3E0;
  padding: 2rpx 8rpx;
  border-radius: 4rpx;
}

.dish-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
  flex-shrink: 0;
}

.action-btn {
  font-size: 22rpx;
  padding: 10rpx 16rpx;
  border-radius: 16rpx;
  border: none;
}

.action-btn::after {
  border: none;
}

.offline-btn {
  background: #FFEBEE;
  color: #F44336;
}

.online-btn {
  background: #E8F5E9;
  color: #4CAF50;
}

.delete-btn {
  background: #f5f5f5;
  color: #999;
}