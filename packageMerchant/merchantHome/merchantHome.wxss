.page-container {
  min-height: 100vh;
  background: #f5f5f5;
  box-sizing: border-box;
}

/* 顶部区域 */
.header {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  padding: 20rpx 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-info {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #fff;
}

.header-subtitle {
  font-size: 22rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 4rpx;
}

.header-actions {
  display: flex;
  gap: 24rpx;
}

.header-link {
  font-size: 24rpx;
  color: rgba(255,255,255,0.9);
  padding: 8rpx 0;
}

/* 自动接单开关栏 */
.auto-accept-bar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #fff;
  padding: 20rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.auto-accept-info {
  display: flex;
  flex-direction: column;
}

.auto-accept-label {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

.auto-accept-desc {
  font-size: 22rpx;
  color: #999;
  margin-top: 4rpx;
}

/* 主导航 */
.main-tabs {
  display: flex;
  background: #fff;
  border-bottom: 1rpx solid #eee;
}

.main-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.main-tab.active {
  color: #FF6B6B;
  font-weight: bold;
}

.main-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: #FF6B6B;
  border-radius: 2rpx;
}

/* 内容区域 */
.content-area {
  flex: 1;
}

/* 子导航 */
.sub-tabs {
  display: flex;
  flex-direction: row;
  white-space: nowrap;
  background: #fff;
  padding: 16rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.sub-tab {
  display: inline-flex;
  flex-shrink: 0;
  padding: 10rpx 28rpx;
  font-size: 26rpx;
  color: #666;
  border-radius: 24rpx;
  margin-right: 16rpx;
}

.sub-tab:last-child {
  margin-right: 0;
}

.sub-tab.active {
  background: #FF6B6B;
  color: #fff;
}

/* 列表容器 */
.list-container {
  height: calc(100vh - 320rpx);
  padding: 16rpx;
  box-sizing: border-box;
}

/* 浮动按钮 */
.fab {
  position: fixed;
  right: 32rpx;
  bottom: 32rpx;
  width: 88rpx;
  height: 88rpx;
  background: #FF6B6B;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #fff;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.3);
  z-index: 50;
}

/* 批量操作按钮 */
.batch-actions {
  padding: 16rpx 24rpx;
  background: #fff;
  border-bottom: 1rpx solid #f0f0f0;
}

.batch-btn {
  width: 100%;
  background: linear-gradient(135deg, #2196F3 0%, #42A5F5 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 0;
  border-radius: 12rpx;
  border: none;
}

.batch-btn[disabled] {
  background: #ccc;
}