.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.header-section {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 24rpx;
  padding: 60rpx 32rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 24rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
}

.logo {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, 0.2);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 24rpx;
}

.logo-icon {
  font-size: 64rpx;
}

.app-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
}

.version {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.info-section {
  padding-bottom: 24rpx;
}

.info-item {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
}

.info-content {
  display: block;
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.contact-item {
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
}

.contact-item:last-child {
  margin-bottom: 0;
}

.contact-label {
  font-size: 26rpx;
  color: #999999;
  margin-right: 8rpx;
  flex-shrink: 0;
}

.contact-value {
  font-size: 26rpx;
  color: #333333;
  flex: 1;
}

.footer-section {
  text-align: center;
  padding-top: 48rpx;
}

.footer-text {
  font-size: 24rpx;
  color: #999999;
}
