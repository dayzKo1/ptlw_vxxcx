page {
  background-color: var(--bg-color);
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Roboto', 'Oxygen', 'Ubuntu', 'Cantarell', 'Fira Sans', 'Droid Sans', 'Helvetica Neue', sans-serif;
  /* 清新风格配色 - 更轻盈柔和 */
  --primary-color: #FF6B70; /* 柔和珊瑚红 */
  --primary-light: #FF8A8E;
  --primary-dark: #FF4D4F;
  --primary-bg: #FFF5F5;
  --primary-bg-light: #FFF9F9;
  --accent-color: #52C41A; /* 清新绿 - 用于优惠/健康标签 */
  --accent-bg: #F6FFED;
  --text-primary: #1A1A1A;
  --text-secondary: #888888; /* 更柔和的灰色 */
  --text-tertiary: #BBBBBB;
  --bg-color: #FAFAFA; /* 更干净的背景 */
  --bg-white: #FFFFFF;
  --bg-light: #F8F9FA; /* 微蓝调的浅灰 */
  --bg-lighter: #FFFFFF;
  --border-color: #F0F0F0; /* 更浅的边框 */
  --border-light: #F7F7F7;
  --shadow-sm: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
  --shadow-md: 0 4rpx 16rpx rgba(0, 0, 0, 0.04);
  --shadow-lg: 0 8rpx 24rpx rgba(0, 0, 0, 0.06);
  --shadow-xl: 0 12rpx 40rpx rgba(0, 0, 0, 0.08);
  --radius-sm: 8rpx;
  --radius-md: 12rpx;
  --radius-lg: 16rpx;
  --radius-xl: 20rpx;
  --radius-2xl: 24rpx;
  --radius-full: 50rpx;
  --spacing-xs: 4rpx;
  --spacing-sm: 8rpx;
  --spacing-md: 12rpx;
  --spacing-lg: 16rpx;
  --spacing-xl: 20rpx;
  --spacing-2xl: 24rpx;
  --spacing-3xl: 32rpx;
  --spacing-4xl: 40rpx;
  --font-size-xs: 20rpx;
  --font-size-sm: 22rpx;
  --font-size-base: 24rpx;
  --font-size-md: 26rpx;
  --font-size-lg: 28rpx;
  --font-size-xl: 32rpx;
  --font-size-2xl: 36rpx;
  --font-size-3xl: 40rpx;
  --font-size-4xl: 48rpx;
  --transition-fast: 0.2s ease;
  --transition-base: 0.3s ease;
  --transition-slow: 0.4s ease;
}

.container {
  padding: var(--spacing-2xl);
}

.btn-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  border-radius: var(--radius-full);
  border: none;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 112, 0.2);
  transition: all var(--transition-base);
}

.btn-primary:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 112, 0.25);
}

.btn-secondary {
  background-color: var(--bg-white);
  color: var(--primary-color);
  border: 2rpx solid var(--primary-color);
  border-radius: var(--radius-full);
  transition: all var(--transition-base);
}

.btn-secondary:active {
  background-color: var(--primary-bg);
  transform: scale(0.98);
}

/* 清新风格卡片 - 更轻盈 */
.card {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  margin-bottom: var(--spacing-2xl);
  box-shadow: var(--shadow-md);
  transition: all var(--transition-base);
  border: 1rpx solid var(--border-color);
}

.card:active {
  transform: scale(0.995);
  box-shadow: var(--shadow-sm);
}

.text-primary {
  color: var(--text-primary);
}

.text-secondary {
  color: var(--text-secondary);
}

.text-success {
  color: var(--accent-color);
}

.text-warning {
  color: #FAAD14;
}

.text-danger {
  color: #FF4D4F;
}

.flex {
  display: flex;
}

.flex-center {
  display: flex;
  align-items: center;
  justify-content: center;
}

.flex-between {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-1 {
  flex: 1;
}

.price {
  color: var(--primary-color);
  font-size: var(--font-size-2xl);
  font-weight: bold;
}

.price::before {
  content: '¥';
  font-size: var(--font-size-base);
  margin-right: var(--spacing-xs);
}

.price-large {
  color: var(--primary-color);
  font-size: var(--font-size-3xl);
  font-weight: bold;
}

.price-large::before {
  content: '¥';
  font-size: var(--font-size-lg);
  margin-right: var(--spacing-xs);
}

.badge {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xs) var(--spacing-md);
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: var(--font-size-xs);
  border-radius: var(--radius-md);
  font-weight: 500;
}

.badge-dot {
  width: 12rpx;
  height: 12rpx;
  border-radius: 50%;
  background: var(--primary-color);
  position: absolute;
  top: 0;
  right: 0;
  border: 2rpx solid var(--bg-white);
}

.divider {
  height: 1rpx;
  background: var(--border-color);
  margin: var(--spacing-lg) 0;
}

.divider-dashed {
  height: 1rpx;
  background: var(--border-light);
  border-top: 1rpx dashed var(--border-light);
  margin: var(--spacing-lg) 0;
}

@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateX(-20rpx);
  }
  to {
    opacity: 1;
    transform: translateX(0);
  }
}

@keyframes scaleIn {
  from {
    opacity: 0;
    transform: scale(0.9);
  }
  to {
    opacity: 1;
    transform: scale(1);
  }
}

@keyframes bounce {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-10rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    opacity: 1;
  }
  50% {
    opacity: 0.5;
  }
}

@keyframes shake {
  0%, 100% {
    transform: translateX(0);
  }
  10%, 30%, 50%, 70%, 90% {
    transform: translateX(-4rpx);
  }
  20%, 40%, 60%, 80% {
    transform: translateX(4rpx);
  }
}

@keyframes rotate {
  from {
    transform: rotate(0deg);
  }
  to {
    transform: rotate(360deg);
  }
}

.fade-in {
  animation: fadeIn var(--transition-slow) ease-out forwards;
}

.slide-in {
  animation: slideIn var(--transition-slow) ease-out forwards;
}

.scale-in {
  animation: scaleIn var(--transition-base) ease-out forwards;
}

.bounce {
  animation: bounce 1s ease-in-out infinite;
}

.pulse {
  animation: pulse 2s ease-in-out infinite;
}

.shake {
  animation: shake 0.5s ease-in-out;
}

.rotate {
  animation: rotate 1s linear infinite;
}

.loading {
  display: inline-block;
  width: 40rpx;
  height: 40rpx;
  border: 4rpx solid var(--border-light);
  border-top-color: var(--primary-color);
  border-radius: 50%;
  animation: rotate 0.8s linear infinite;
}

.skeleton {
  background: linear-gradient(90deg, var(--bg-light) 25%, var(--bg-lighter) 50%, var(--bg-light) 75%);
  background-size: 200% 100%;
  animation: skeleton-loading 1.5s ease-in-out infinite;
}

@keyframes skeleton-loading {
  0% {
    background-position: 200% 0;
  }
  100% {
    background-position: -200% 0;
  }
}

.safe-area-bottom {
  padding-bottom: calc(env(safe-area-inset-bottom));
}

.scrollbar-hide::-webkit-scrollbar {
  display: none;
}

.scrollbar-hide {
  -ms-overflow-style: none;
  scrollbar-width: none;
}

.text-ellipsis {
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.text-ellipsis-2 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}

.text-ellipsis-3 {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}

/* ========== 清新风格 · 全局组件样式 ========== */

/* 食物卡片 */
.food-card {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-base);
}

.food-card:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-sm);
}

/* 分类标签 */
.food-tag {
  display: inline-flex;
  align-items: center;
  padding: 4rpx 12rpx;
  background: var(--primary-bg);
  color: var(--primary-color);
  font-size: var(--font-size-xs);
  border-radius: var(--radius-full);
  font-weight: 500;
}

.food-tag-success {
  background: var(--accent-bg);
  color: var(--accent-color);
}

/* 数量控制器 */
.quantity-control {
  display: flex;
  align-items: center;
  background: var(--bg-light);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xs) var(--spacing-sm);
}

.quantity-control .minus-btn,
.quantity-control .plus-btn {
  width: 44rpx;
  height: 44rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: 600;
  transition: all var(--transition-base);
}

.quantity-control .minus-btn {
  background: var(--bg-white);
  color: var(--text-secondary);
  box-shadow: 0 1rpx 4rpx rgba(0, 0, 0, 0.05);
}

.quantity-control .minus-btn:active {
  transform: scale(0.9);
  background: var(--border-light);
}

.quantity-control .plus-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 112, 0.25);
}

.quantity-control .plus-btn:active {
  transform: scale(0.9);
}

.quantity-control .quantity {
  width: 48rpx;
  text-align: center;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: 600;
}

/* 空状态 */
.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-state .empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-2xl);
  opacity: 0.3;
}

.empty-state .empty-text {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

/* 区块标题 */
.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.section-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
}

.section-more {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

/* 输入框 */
.input-clean {
  width: 100%;
  padding: var(--spacing-lg);
  background: var(--bg-light);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-md);
  color: var(--text-primary);
  border: 1rpx solid var(--border-color);
  outline: none;
  transition: all var(--transition-base);
  box-sizing: border-box;
}

.input-clean:focus {
  background: var(--bg-white);
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2rpx rgba(255, 107, 112, 0.1);
}

/* 搜索栏 */
.search-bar {
  display: flex;
  align-items: center;
  background: var(--bg-light);
  border-radius: var(--radius-full);
  padding: var(--spacing-md) var(--spacing-xl);
  border: 1rpx solid var(--border-color);
  transition: all var(--transition-base);
}

.search-bar:focus-within {
  background: var(--bg-white);
  border-color: var(--primary-color);
  box-shadow: 0 0 0 2rpx rgba(255, 107, 112, 0.1);
}

.search-bar .search-icon {
  font-size: var(--font-size-md);
  margin-right: var(--spacing-sm);
  color: var(--text-tertiary);
}

.search-bar .search-input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

/* 底部安全区 */
.safe-area-padding {
  padding-bottom: calc(var(--spacing-xl) + env(safe-area-inset-bottom));
}

/* 渐变背景 */
.gradient-primary {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
}

.gradient-accent {
  background: linear-gradient(135deg, var(--accent-color) 0%, #52C41A 100%);
}

/* 微动效 */
.hover-lift {
  transition: transform var(--transition-base), box-shadow var(--transition-base);
}

.hover-lift:active {
  transform: scale(0.98);
}

/* 价格显示 */
.price-symbol {
  font-size: var(--font-size-base);
  margin-right: var(--spacing-xs);
}

.price-main {
  font-size: var(--font-size-2xl);
  font-weight: 700;
}

.price-large {
  font-size: var(--font-size-3xl);
  font-weight: 700;
}