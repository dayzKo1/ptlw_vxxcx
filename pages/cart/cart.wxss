.container {
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-white) 100%);
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 180rpx;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: var(--spacing-4xl);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

.empty-icon text {
  font-size: 100rpx;
  position: relative;
  z-index: 1;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

.empty-text {
  font-size: var(--font-size-xl);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-4xl);
  font-weight: 500;
}

.go-order-btn {
  width: 340rpx;
  height: 96rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  font-size: var(--font-size-xl);
  font-weight: bold;
  border-radius: var(--radius-full);
  border: none;
  box-shadow: var(--shadow-lg);
  transition: all var(--transition-base);
}

.go-order-btn:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.cart-content {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.cart-header {
  background: var(--bg-white);
  padding: var(--spacing-2xl);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid var(--border-light);
  box-shadow: var(--shadow-sm);
}

.table-number {
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  font-weight: 600;
}

.clear-btn {
  font-size: var(--font-size-md);
  color: var(--primary-color);
  font-weight: 500;
  transition: all var(--transition-base);
  padding: var(--spacing-sm) var(--spacing-lg);
  border-radius: var(--radius-xl);
}

.clear-btn:active {
  opacity: 0.7;
  background-color: var(--primary-bg);
}

.delivery-mode-section {
  background: var(--bg-white);
  padding: var(--spacing-2xl);
  margin: 0 var(--spacing-xl) var(--spacing-xl) var(--spacing-xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.mode-title {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  font-weight: 600;
}

.mode-options {
  display: flex;
  gap: var(--spacing-lg);
}

.mode-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-xl);
  border-radius: var(--radius-lg);
  background: var(--bg-light);
  transition: all var(--transition-base);
}

.mode-option.active {
  background: var(--primary-color);
}

.mode-icon {
  font-size: var(--font-size-lg);
  margin-right: var(--spacing-sm);
}

.mode-text {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--text-secondary);
}

.mode-option.active .mode-text {
  color: var(--bg-white);
  font-weight: 600;
}

.address-section {
  background: var(--bg-white);
  padding: var(--spacing-2xl);
  margin: 0 var(--spacing-xl) var(--spacing-xl) var(--spacing-xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.address-title {
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  font-weight: 600;
}

.add-address-btn {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  padding: var(--spacing-sm) var(--spacing-md);
  border-radius: var(--radius-md);
  background: var(--primary-bg);
}

.address-list {
  white-space: nowrap;
  padding: var(--spacing-xs) 0;
}

.address-item {
  display: inline-block;
  width: 280rpx;
  padding: var(--spacing-xl);
  margin-right: var(--spacing-lg);
  background: var(--bg-light);
  border-radius: var(--radius-lg);
  border: 1rpx solid transparent;
  transition: all var(--transition-base);
  vertical-align: top;
}

.address-item.active {
  background: var(--primary-bg);
  border-color: var(--primary-color);
}

.address-info {
  display: flex;
  flex-direction: column;
}

.address-name {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: 600;
  margin-bottom: var(--spacing-sm);
}

.address-detail {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  line-height: 1.4;
}

.address-check {
  position: absolute;
  top: var(--spacing-sm);
  right: var(--spacing-sm);
  font-size: var(--font-size-md);
  color: var(--primary-color);
  font-weight: 600;
}

.empty-address {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-2xl);
  color: var(--text-tertiary);
  font-size: var(--font-size-sm);
}

.cart-list {
  flex: 1;
  padding: var(--spacing-xl);
}

.cart-item {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
  display: flex;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.cart-item:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-md);
}

.dish-image {
  width: 170rpx;
  height: 170rpx;
  border-radius: var(--radius-lg);
  margin-right: var(--spacing-xl);
  flex-shrink: 0;
  background-color: var(--bg-light);
}

.dish-image-placeholder {
  width: 170rpx;
  height: 170rpx;
  border-radius: var(--radius-lg);
  margin-right: var(--spacing-xl);
  flex-shrink: 0;
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 88rpx;
  position: relative;
  overflow: hidden;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: var(--radius-xl);
  box-shadow: inset 0 -4rpx 12rpx rgba(255, 90, 95, 0.15);
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.dish-specs {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-md);
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dish-price {
  font-size: var(--font-size-3xl);
  color: var(--primary-color);
  font-weight: 600;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.minus-btn,
.plus-btn {
  width: 52rpx;
  height: 52rpx;
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-xl);
  font-weight: 600;
  transition: all var(--transition-base);
}

.minus-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.minus-btn:active {
  transform: scale(0.9);
  box-shadow: var(--shadow-sm);
}

.plus-btn {
  background: var(--primary-color);
  color: var(--bg-white);
  box-shadow: var(--shadow-sm);
}

.plus-btn:active {
  transform: scale(0.9);
  box-shadow: var(--shadow-md);
}

.quantity {
  width: 72rpx;
  text-align: center;
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  font-weight: 600;
}

.remark-section {
  background: var(--bg-white);
  padding: var(--spacing-2xl);
  margin: 0 var(--spacing-xl) var(--spacing-xl) var(--spacing-xl);
  border-radius: var(--radius-xl);
  box-shadow: var(--shadow-sm);
}

.remark-label {
  display: block;
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  font-weight: 600;
}

.remark-input {
  width: 100%;
  min-height: 140rpx;
  padding: var(--spacing-lg);
  background: var(--bg-light);
  border-radius: var(--radius-lg);
  font-size: var(--font-size-lg);
  color: var(--text-primary);
  box-sizing: border-box;
  line-height: 1.6;
  border: 1rpx solid transparent;
  transition: all var(--transition-base);
}

.remark-input:focus {
  border-color: var(--primary-color);
  background: var(--bg-white);
}

.cart-footer {
  background: var(--bg-white);
  padding: var(--spacing-2xl);
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid var(--border-light);
  box-shadow: var(--shadow-lg);
  padding-bottom: calc(var(--spacing-2xl) + env(safe-area-inset-bottom));
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: var(--font-size-xl);
  color: var(--text-primary);
  margin-right: var(--spacing-md);
}

.total-price {
  font-size: var(--font-size-4xl);
  color: var(--primary-color);
  font-weight: 600;
}

.submit-btn {
  width: 260rpx;
  height: 88rpx;
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: var(--font-size-xl);
  font-weight: 600;
  border-radius: var(--radius-full);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}
