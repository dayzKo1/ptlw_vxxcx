.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f8f8 0%, #ffffff 100%);
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 180rpx;
}

.empty-icon {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
  position: relative;
}

.empty-icon::before {
  content: '';
  position: absolute;
  width: 140rpx;
  height: 140rpx;
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.15) 0%, rgba(255, 142, 83, 0.15) 100%);
  border-radius: 50%;
  animation: pulse 2s ease-in-out infinite;
}

.empty-icon text {
  font-size: 100rpx;
  position: relative;
  z-index: 1;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

.empty-text {
  font-size: 34rpx;
  color: #999999;
  margin-bottom: 64rpx;
  font-weight: 500;
}

.go-order-btn {
  width: 340rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 54rpx;
  border: none;
  box-shadow: 0 10rpx 32rpx rgba(255, 107, 107, 0.35);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.go-order-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.45);
}

.cart-content {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.cart-header {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #eeeeee;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.table-number {
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.clear-btn {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: 500;
  transition: all 0.3s ease;
  padding: 12rpx 20rpx;
  border-radius: 30rpx;
}

.clear-btn:active {
  opacity: 0.7;
  background-color: rgba(255, 107, 107, 0.1);
}

.delivery-mode-section {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  padding: 32rpx;
  margin: 0 28rpx 28rpx 28rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.mode-title {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.mode-options {
  display: flex;
  gap: 16rpx;
}

.mode-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 24rpx;
  border-radius: 16rpx;
  background: #f5f5f5;
  transition: all 0.3s ease;
}

.mode-option.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
}

.mode-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.mode-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
}

.mode-option.active .mode-text {
  color: #ffffff;
  font-weight: bold;
}

.address-section {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  padding: 32rpx;
  margin: 0 28rpx 28rpx 28rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.address-title {
  font-size: 28rpx;
  color: #333333;
  font-weight: bold;
}

.add-address-btn {
  font-size: 24rpx;
  color: #ff6b6b;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #fff5f5;
}

.address-list {
  white-space: nowrap;
  padding: 4rpx 0;
}

.address-item {
  display: inline-block;
  width: 280rpx;
  padding: 20rpx;
  margin-right: 16rpx;
  background: #f5f5f5;
  border-radius: 16rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  vertical-align: top;
}

.address-item.active {
  background: #fff5f5;
  border-color: #ff6b6b;
}

.address-info {
  display: flex;
  flex-direction: column;
}

.address-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.address-detail {
  font-size: 22rpx;
  color: #666666;
  line-height: 1.4;
}

.address-check {
  position: absolute;
  top: 10rpx;
  right: 10rpx;
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.empty-address {
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 40rpx;
  color: #999999;
  font-size: 24rpx;
}

.cart-list {
  flex: 1;
  padding: 28rpx;
}

.cart-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  padding: 28rpx;
  margin-bottom: 28rpx;
  display: flex;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.cart-item:active {
  transform: scale(0.99);
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.15);
}

.dish-image {
  width: 190rpx;
  height: 190rpx;
  border-radius: 20rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
  background-color: #f5f5f5;
}

.dish-image-placeholder {
  width: 190rpx;
  height: 190rpx;
  border-radius: 20rpx;
  margin-right: 28rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  position: relative;
  overflow: hidden;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 20rpx;
  box-shadow: inset 0 -6rpx 16rpx rgba(255, 107, 107, 0.2);
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 14rpx;
}

.dish-specs {
  font-size: 26rpx;
  color: #999999;
  margin-bottom: 14rpx;
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dish-price {
  font-size: 42rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.minus-btn,
.plus-btn {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.minus-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666666;
}

.minus-btn:active {
  transform: scale(0.9);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.plus-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.35);
}

.plus-btn:active {
  transform: scale(0.9);
  box-shadow: 0 3rpx 10rpx rgba(255, 107, 107, 0.4);
}

.quantity {
  width: 80rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.remark-section {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  padding: 32rpx;
  margin: 0 28rpx 28rpx 28rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.remark-label {
  display: block;
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 22rpx;
  font-weight: bold;
}

.remark-input {
  width: 100%;
  min-height: 150rpx;
  padding: 22rpx;
  background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
  border-radius: 18rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 1.6;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
}

.remark-input:focus {
  border-color: #ff6b6b;
  background: #ffffff;
}

.cart-footer {
  background: linear-gradient(145deg, #ffffff 0%, #f8f8f8 100%);
  padding: 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #eeeeee;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.12);
  padding-bottom: calc(32rpx + env(safe-area-inset-bottom));
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 30rpx;
  color: #333333;
  margin-right: 12rpx;
}

.total-price {
  font-size: 48rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.submit-btn {
  width: 280rpx;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 54rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 10rpx 32rpx rgba(255, 107, 107, 0.35);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.45);
}
