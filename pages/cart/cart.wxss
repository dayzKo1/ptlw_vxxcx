.container {
  min-height: 100vh;
  background-color: #F8F8F8;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
  font-size: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  margin-bottom: 60rpx;
  font-weight: 500;
}

.go-order-btn {
  width: 320rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.go-order-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.cart-content {
  display: flex;
  flex-direction: column;
  height: 100vh;
}

.cart-header {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1rpx solid #EEEEEE;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.table-number {
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}

.clear-btn {
  font-size: 26rpx;
  color: #FF6B6B;
  font-weight: 500;
  transition: all 0.3s ease;
}

.clear-btn:active {
  opacity: 0.7;
}

.cart-list {
  flex: 1;
  padding: 24rpx;
}

.cart-item {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  display: flex;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.cart-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.dish-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #F5F5F5;
}

.dish-image-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.dish-specs {
  font-size: 24rpx;
  color: #999999;
  margin-bottom: 12rpx;
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dish-price {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.minus-btn,
.plus-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.minus-btn {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #666666;
}

.minus-btn:active {
  transform: scale(0.9);
}

.plus-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.plus-btn:active {
  transform: scale(0.9);
}

.quantity {
  width: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}

.remark-section {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  padding: 30rpx;
  margin: 0 24rpx 24rpx 24rpx;
  border-radius: 20rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
}

.remark-label {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 20rpx;
  font-weight: bold;
}

.remark-input {
  width: 100%;
  min-height: 140rpx;
  padding: 20rpx;
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 1.6;
}

.cart-footer {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  padding: 30rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-top: 1rpx solid #EEEEEE;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
  padding-bottom: calc(30rpx + env(safe-area-inset-bottom));
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 28rpx;
  color: #333333;
  margin-right: 10rpx;
}

.total-price {
  font-size: 44rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.submit-btn {
  width: 260rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}