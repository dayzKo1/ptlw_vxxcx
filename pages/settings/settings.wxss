.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 120rpx;
  box-sizing: border-box;
}

.section {
  background: #ffffff;
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-title {
  display: block;
  font-size: 24rpx;
  color: #999999;
  padding: 24rpx 32rpx 16rpx 32rpx;
}

.menu-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  transition: background 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-text {
  font-size: 28rpx;
  color: #333333;
}

.menu-value {
  font-size: 26rpx;
  color: #999999;
  margin-right: 8rpx;
}

.menu-arrow {
  font-size: 24rpx;
  color: #cccccc;
}

.logout-section {
  margin-top: 48rpx;
}

.logout-btn {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: 2rpx solid #ff6b6b;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.logout-btn:active {
  background: #fff5f5;
  transform: scale(0.98);
}
