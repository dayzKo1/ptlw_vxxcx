.container {
  min-height: 100vh;
  background: var(--bg-light);
  padding: var(--spacing-lg);
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.search-section {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: var(--bg-light);
  border-radius: var(--radius-xl);
  padding: var(--spacing-md) var(--spacing-xl);
  transition: all var(--transition-base);
}

.search-input-wrapper:focus-within {
  background: var(--bg-white);
  border: 1rpx solid var(--primary-color);
}

.search-icon {
  font-size: var(--font-size-md);
  margin-right: var(--spacing-sm);
  color: var(--text-tertiary);
}

.search-input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.clear-icon {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
  padding: var(--spacing-xs);
  margin-left: var(--spacing-xs);
}

.search-result {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-sm);
}

.search-result-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.search-result-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.search-result-count {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.search-result-list {
  max-height: calc(100vh - 400rpx);
  padding: var(--spacing-md);
}

.dish-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--border-light);
  background: var(--bg-white);
}

.dish-item:last-child {
  border-bottom: none;
}

.dish-image-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: var(--radius-lg);
  margin-right: var(--spacing-lg);
  flex-shrink: 0;
  background: linear-gradient(135deg, var(--primary-bg) 0%, var(--primary-bg-light) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 52rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.dish-name {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.dish-desc {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-sm);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-tags {
  display: flex;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-sm);
}

.dish-tag {
  font-size: var(--font-size-xs);
  padding: var(--spacing-xs) var(--spacing-sm);
  border-radius: var(--radius-sm);
  background: var(--primary-bg);
  color: var(--primary-color);
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dish-price {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: var(--spacing-md);
}

.minus-btn,
.plus-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: bold;
  transition: all var(--transition-base);
}

.minus-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.minus-btn:active {
  transform: scale(0.9);
  background: var(--border-light);
}

.plus-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
}

.plus-btn:active {
  transform: scale(0.9);
}

.quantity {
  width: 52rpx;
  text-align: center;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: bold;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 120rpx 0;
}

.empty-result .empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-lg);
  opacity: 0.5;
}

.empty-result .empty-text {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: var(--spacing-lg);
  background: var(--bg-white);
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-bottom: calc(var(--spacing-lg) + env(safe-area-inset-bottom));
}

.cart-info {
  display: flex;
  align-items: center;
  flex: 1;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: var(--spacing-md);
}

.cart-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: var(--radius-full);
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  min-width: 36rpx;
  height: 36rpx;
  border-radius: var(--radius-full);
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: var(--font-size-xs);
  font-weight: bold;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 var(--spacing-xs);
  border: 2rpx solid var(--bg-white);
}

.cart-total {
  display: flex;
  flex-direction: column;
  align-items: flex-end;
}

.total-price {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
  font-weight: bold;
}

.total-desc {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-top: var(--spacing-xs);
}

.checkout-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  font-size: var(--font-size-lg);
  font-weight: bold;
  border-radius: var(--radius-full);
  border: none;
  padding: var(--spacing-md) var(--spacing-2xl);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
  transition: all var(--transition-base);
}

.checkout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.cart-drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  transition: opacity var(--transition-base);
}

.cart-drawer-mask.show {
  opacity: 1;
}

.cart-drawer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-white);
  border-radius: var(--radius-2xl) var(--radius-2xl) 0 0;
  z-index: 1000;
  transform: translateY(100%);
  transition: transform var(--transition-base);
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

.cart-drawer.show {
  transform: translateY(0);
}

.cart-drawer-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1rpx solid var(--border-light);
}

.cart-drawer-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.close-drawer {
  font-size: var(--font-size-2xl);
  color: var(--text-tertiary);
  padding: var(--spacing-xs);
}

.cart-drawer-list {
  max-height: 50vh;
  padding: var(--spacing-lg);
}

.cart-drawer-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-lg) 0;
  border-bottom: 1rpx solid var(--border-light);
}

.cart-drawer-item:last-child {
  border-bottom: none;
}

.cart-dish-image-placeholder {
  width: 80rpx;
  height: 80rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-md);
  flex-shrink: 0;
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
}

.cart-dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.cart-dish-name {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.cart-dish-price {
  font-size: var(--font-size-lg);
  color: var(--primary-color);
  font-weight: bold;
}

.cart-quantity-control {
  display: flex;
  align-items: center;
  gap: var(--spacing-sm);
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-cart .empty-icon {
  font-size: 80rpx;
  margin-bottom: var(--spacing-md);
  opacity: 0.5;
}

.empty-cart .empty-text {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

.cart-drawer-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-top: 1rpx solid var(--border-light);
}

.drawer-total {
  display: flex;
  align-items: center;
  gap: var(--spacing-md);
}

.drawer-total-label {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.drawer-total-price {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
  font-weight: bold;
}

.drawer-checkout-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  font-size: var(--font-size-md);
  font-weight: bold;
  border-radius: var(--radius-full);
  border: none;
  padding: var(--spacing-md) var(--spacing-xl);
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
  transition: all var(--transition-base);
}

.drawer-checkout-btn:active {
  transform: scale(0.98);
}

.dish-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  transition: opacity var(--transition-base);
}

.dish-modal-mask.show {
  opacity: 1;
}

.dish-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-white);
  border-radius: var(--radius-2xl) var(--radius-2xl) 0 0;
  z-index: 1000;
  transform: translateY(100%);
  transition: transform var(--transition-base);
  padding-bottom: calc(160rpx + env(safe-area-inset-bottom));
}

.dish-modal.show {
  transform: translateY(0);
}

.dish-modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.dish-modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1rpx solid var(--border-light);
}

.dish-modal-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.close-modal {
  font-size: var(--font-size-2xl);
  color: var(--text-tertiary);
  padding: var(--spacing-xs);
}

.dish-modal-body {
  flex: 1;
  padding: var(--spacing-2xl);
  overflow-y: auto;
}

.modal-dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius-xl);
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  margin-bottom: var(--spacing-xl);
}

.modal-dish-info {
  display: flex;
  flex-direction: column;
}

.modal-dish-name {
  font-size: var(--font-size-2xl);
  font-weight: bold;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.modal-dish-desc {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
  line-height: 1.6;
  margin-bottom: var(--spacing-lg);
}

.modal-dish-tags {
  display: flex;
  gap: var(--spacing-sm);
  margin-bottom: var(--spacing-lg);
}

.modal-dish-tag {
  font-size: var(--font-size-sm);
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-sm);
  background: var(--primary-bg);
  color: var(--primary-color);
}

.modal-dish-price {
  font-size: var(--font-size-3xl);
  color: var(--primary-color);
  font-weight: bold;
  margin-bottom: var(--spacing-xl);
}

.dish-modal-footer {
  padding: var(--spacing-xl);
  border-top: 1rpx solid var(--border-light);
}

.modal-add-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  font-size: var(--font-size-lg);
  font-weight: bold;
  border-radius: var(--radius-full);
  border: none;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
  transition: all var(--transition-base);
}

.modal-add-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}