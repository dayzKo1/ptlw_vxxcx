.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f5f5 0%, #ffffff 100%);
  padding-bottom: 130rpx;
}

.image-placeholder {
  width: 100%;
  height: 640rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: linear-gradient(135deg, #fff5f5 0%, #fff0f0 100%);
  position: relative;
  overflow: hidden;
}

.image-placeholder::before {
  content: "";
  position: absolute;
  width: 320rpx;
  height: 320rpx;
  background: linear-gradient(
    135deg,
    rgba(255, 107, 107, 0.1) 0%,
    rgba(255, 142, 83, 0.1) 100%
  );
  border-radius: 50%;
  animation: pulse 2.5s ease-in-out infinite;
}

.emoji {
  font-size: 220rpx;
  position: relative;
  z-index: 1;
}

.dish-swiper {
  width: 100%;
  height: 640rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.dish-info-card {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.dish-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.dish-name {
  font-size: 44rpx;
  font-weight: bold;
  color: #333333;
  flex: 1;
  letter-spacing: 0.5rpx;
}

.dish-tags {
  display: flex;
  gap: 12rpx;
}

.tag {
  padding: 8rpx 20rpx;
  font-size: 22rpx;
  border-radius: 8rpx;
}

.tag.hot {
  background: linear-gradient(135deg, #ffebee 0%, #ffcdd2 100%);
  color: #e53935;
}

.tag.new {
  background: linear-gradient(135deg, #e3f2fd 0%, #bbdefb 100%);
  color: #1976d2;
}

.dish-price {
  display: block;
  font-size: 52rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-bottom: 24rpx;
}

.dish-desc {
  display: block;
  font-size: 30rpx;
  color: #666666;
  line-height: 1.7;
  margin-bottom: 32rpx;
}

.dish-specs {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.specs-title {
  font-size: 28rpx;
  color: #999999;
  margin-right: 12rpx;
}

.specs-content {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.spicy-level {
  display: flex;
}

.spicy-star {
  font-size: 36rpx;
  color: #e0e0e0;
  margin-right: 6rpx;
}

.spicy-star.active {
  color: #ff6b6b;
}

.quantity-section,
.remark-section {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  padding: 32rpx;
  margin: 24rpx;
  border-radius: 24rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
}

.section-title {
  display: block;
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.quantity-control {
  display: flex;
  align-items: center;
  justify-content: center;
}

.control-btn {
  width: 76rpx;
  height: 76rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  font-weight: bold;
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666666;
  transition: all 0.3s ease;
}

.control-btn:active {
  transform: scale(0.9);
}

.control-btn.plus {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.35);
}

.quantity {
  width: 110rpx;
  text-align: center;
  font-size: 32rpx;
  color: #333333;
  font-weight: bold;
}

.remark-input {
  width: 100%;
  min-height: 130rpx;
  padding: 22rpx;
  background: linear-gradient(135deg, #f8f8f8 0%, #f0f0f0 100%);
  border-radius: 16rpx;
  font-size: 28rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 1.6;
}

.footer-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(145deg, #ffffff 0%, #f8f8f8 100%);
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.12);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.total-info {
  display: flex;
  align-items: center;
}

.total-label {
  font-size: 30rpx;
  color: #666666;
}

.total-price {
  font-size: 44rpx;
  color: #ff6b6b;
  font-weight: bold;
  margin-left: 12rpx;
}

.add-cart-btn {
  width: 320rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
  transition: all 0.35s ease;
}

.add-cart-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.45);
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
    opacity: 0.8;
  }
  50% {
    transform: scale(1.1);
    opacity: 1;
  }
}
