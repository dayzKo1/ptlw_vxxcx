.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  padding-bottom: 160rpx;
  box-sizing: border-box;
}

.cart-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
}

.clear-btn {
  font-size: 24rpx;
  color: #999999;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #f5f5f5;
}

.cart-list {
  max-height: 400rpx;
}

.cart-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.cart-item:last-child {
  border-bottom: none;
}

.dish-image-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 52rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.dish-name {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-price {
  font-size: 28rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.minus-btn,
.plus-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.minus-btn {
  background: #f5f5f5;
  color: #666666;
}

.minus-btn:active {
  transform: scale(0.9);
  background: #eeeeee;
}

.plus-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
}

.plus-btn:active {
  transform: scale(0.9);
}

.quantity {
  width: 52rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 80rpx 0;
}

.empty-cart .empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-cart .empty-text {
  font-size: 26rpx;
  color: #999999;
}

.delivery-mode-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-label {
  display: block;
  font-size: 26rpx;
  color: #666666;
  margin-bottom: 16rpx;
}

.delivery-mode-options {
  display: flex;
  gap: 12rpx;
}

.delivery-mode-option {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.delivery-mode-option.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
}

.delivery-mode-icon {
  font-size: 32rpx;
  margin-right: 8rpx;
}

.delivery-mode-text {
  font-size: 28rpx;
  font-weight: 500;
}

.address-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.address-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.address-title {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.add-address-btn {
  font-size: 24rpx;
  color: #ff6b6b;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: #fff5f5;
}

.address-list {
  white-space: nowrap;
  padding: 4rpx 0;
}

.address-item {
  display: inline-block;
  width: 280rpx;
  padding: 20rpx;
  margin-right: 12rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  border: 2rpx solid transparent;
  transition: all 0.3s ease;
  vertical-align: top;
  position: relative;
}

.address-item.active {
  background: #fff5f5;
  border-color: #ff6b6b;
}

.address-info {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.address-name {
  font-size: 26rpx;
  color: #333333;
  font-weight: 500;
}

.address-detail {
  font-size: 24rpx;
  color: #666666;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.address-check {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.empty-address {
  text-align: center;
  padding: 40rpx 0;
  font-size: 24rpx;
  color: #999999;
}

.remark-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.remark-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 26rpx;
  color: #333333;
  box-sizing: border-box;
  line-height: 1.6;
}

.total-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.total-row {
  display: flex;
  justify-content: space-between;
  margin-bottom: 12rpx;
}

.total-row-main {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx dashed #eeeeee;
}

.total-label {
  font-size: 26rpx;
  color: #666666;
}

.total-value {
  font-size: 26rpx;
  color: #333333;
}

.total-price {
  font-size: 36rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.footer-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 24rpx;
  background: #ffffff;
  box-shadow: 0 -4rpx 16rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.submit-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
  transition: all 0.3s ease;
}

.submit-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}
