.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f5f5f5 0%, #ffffff 100%);
  padding-bottom: 120rpx;
}

.order-status-card {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  padding: 48rpx 24rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  box-shadow: 0 6rpx 24rpx rgba(255, 107, 107, 0.2);
}

.status-icon {
  width: 90rpx;
  height: 90rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  color: #ffffff;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.order-info-card,
.order-items-card,
.order-remark-card,
.order-total-card {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin: 20rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #999999;
}

.info-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
}

.card-title {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
}

.item-list {
  margin-top: 24rpx;
}

.item-row {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.item-row:last-child {
  margin-bottom: 0;
}

.item-image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 12rpx;
  margin-right: 24rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 30rpx;
  color: #333333;
  margin-bottom: 10rpx;
  font-weight: 500;
}

.item-price {
  font-size: 28rpx;
  color: #999999;
}

.item-quantity {
  font-size: 30rpx;
  color: #666666;
}

.remark-text {
  font-size: 28rpx;
  color: #666666;
  line-height: 1.7;
}

.total-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
}

.total-row:last-child {
  margin-bottom: 0;
}

.total-row.main {
  margin-top: 24rpx;
  padding-top: 24rpx;
  border-top: 1rpx solid #f0f0f0;
}

.total-label {
  font-size: 28rpx;
  color: #666666;
}

.total-value {
  font-size: 28rpx;
  color: #333333;
}

.total-value.price {
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(145deg, #ffffff 0%, #f8f8f8 100%);
  padding: 24rpx 32rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 24rpx;
  box-shadow: 0 -10rpx 40rpx rgba(0, 0, 0, 0.12);
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
  border-top: 1rpx solid rgba(0, 0, 0, 0.05);
}

.action-btn {
  padding: 14rpx 32rpx;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 28rpx;
  border: none;
  line-height: 1;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.96);
}

.cancel-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666666;
}

.pay-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.25);
}

.contact-btn {
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  color: #ff6b6b;
}
