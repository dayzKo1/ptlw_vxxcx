.container {
  min-height: 100vh;
  background-color: #F5F5F5;
  padding-bottom: 120rpx;
}

.order-status-card {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  padding: 60rpx 30rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.status-icon {
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
}

.status-text {
  font-size: 36rpx;
  color: #FFFFFF;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.status-desc {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.9);
}

.order-info-card,
.order-items-card,
.order-remark-card,
.order-total-card {
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 30rpx;
  margin: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.info-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.info-row:last-child {
  margin-bottom: 0;
}

.info-label {
  width: 150rpx;
  font-size: 26rpx;
  color: #999999;
}

.info-value {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
  text-align: right;
}

.card-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
}

.item-list {
  margin-top: 20rpx;
}

.item-row {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.item-row:last-child {
  margin-bottom: 0;
}

.item-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 8rpx;
  margin-right: 20rpx;
}

.item-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.item-name {
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
}

.item-price {
  font-size: 26rpx;
  color: #999999;
}

.item-quantity {
  font-size: 28rpx;
  color: #666666;
}

.remark-text {
  font-size: 26rpx;
  color: #666666;
  line-height: 1.6;
}

.total-row {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
}

.total-row:last-child {
  margin-bottom: 0;
}

.total-row.main {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #F0F0F0;
}

.total-label {
  font-size: 26rpx;
  color: #666666;
}

.total-value {
  font-size: 26rpx;
  color: #333333;
}

.total-value.price {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.action-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  padding: 20rpx 30rpx;
  display: flex;
  align-items: center;
  justify-content: flex-end;
  gap: 20rpx;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.action-btn {
  padding: 16rpx 40rpx;
  font-size: 26rpx;
  border-radius: 40rpx;
  border: none;
  line-height: 1;
}

.cancel-btn {
  background-color: #F5F5F5;
  color: #666666;
}

.pay-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
}

.contact-btn {
  background-color: #F5F5F5;
  color: #FF6B6B;
}