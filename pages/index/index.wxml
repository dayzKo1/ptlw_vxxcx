<view class="container">
  <view class="banner-section">
    <view class="banner-item" wx:for="{{banners}}" wx:key="_id">
      <view class="banner-image-placeholder">{{item.emoji || '🎉'}}</view>
      <text class="banner-title">{{item.title}}</text>
    </view>
  </view>

  <view class="table-selector-section">
    <view class="table-info-card">
      <text class="table-info-label">📍 当前桌号</text>
      <text class="table-info-value">{{tableNumber || '0'}}</text>
    </view>
  </view>

  <view class="order-mode-section">
    <view class="mode-item" bindtap="goToMenu" data-mode="dine-in">
      <view class="mode-icon">🍽️</view>
      <view class="mode-info">
        <text class="mode-title">在店堂食</text>
        <text class="mode-desc">扫码点餐，堂食享受</text>
      </view>
      <view class="mode-arrow">→</view>
    </view>
    <view class="mode-item" bindtap="goToMenu" data-mode="delivery">
      <view class="mode-icon">🛵</view>
      <view class="mode-info">
        <text class="mode-title">外卖配送</text>
        <text class="mode-desc">在线下单，配送上门</text>
      </view>
      <view class="mode-arrow">→</view>
    </view>
  </view>

  <view class="header">
    <view class="shop-logo">🏪</view>
    <view class="shop-info">
      <text class="shop-name">{{shopInfo.name}}</text>
      <text class="shop-address" bindtap="openLocation">📍 {{shopInfo.address}}</text>
      <text class="shop-phone" bindtap="makeCall">📞 {{shopInfo.phone}}</text>
      <text class="shop-hours">⏰ 营业时间：{{shopInfo.businessHours}}</text>
    </view>
  </view>
</view>