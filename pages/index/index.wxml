<view class="container">
  <view class="header">
    <image class="shop-logo" src="{{shopInfo.logo}}" mode="aspectFill"></image>
    <view class="shop-info">
      <text class="shop-name">{{shopInfo.name}}</text>
      <text class="shop-address">{{shopInfo.address}}</text>
      <text class="shop-phone">{{shopInfo.phone}}</text>
      <text class="shop-hours">营业时间：{{shopInfo.businessHours}}</text>
    </view>
  </view>

  <view class="section">
    <view class="section-title">
      <text>热门推荐</text>
    </view>
    <scroll-view scroll-x class="hot-dishes">
      <view class="hot-dish-item" wx:for="{{hotDishes}}" wx:key="_id" bindtap="goToDetail" data-id="{{item._id}}">
        <image class="dish-image" src="{{item.image}}" mode="aspectFill"></image>
        <text class="dish-name">{{item.name}}</text>
        <text class="dish-price">¥{{item.price}}</text>
      </view>
    </scroll-view>
  </view>

  <view class="section">
    <view class="section-title">
      <text>菜品分类</text>
    </view>
    <view class="category-list">
      <view class="category-item" wx:for="{{categories}}" wx:key="_id" bindtap="goToCategory" data-id="{{item._id}}">
        <image class="category-image" src="{{item.image}}" mode="aspectFill"></image>
        <text class="category-name">{{item.name}}</text>
      </view>
    </view>
  </view>

  <view class="section">
    <view class="section-title">
      <text>扫码点餐</text>
    </view>
    <button class="scan-btn" bindtap="scanCode">
      <image class="scan-icon" src="/images/scan.png"></image>
      <text>扫描桌号二维码</text>
    </button>
  </view>

  <view class="nav-bar">
    <view class="nav-item" bindtap="goToPage" data-page="menu">
      <text>点餐</text>
    </view>
    <view class="nav-item" bindtap="goToPage" data-page="cart">
      <text>购物车</text>
    </view>
    <view class="nav-item" bindtap="goToPage" data-page="order">
      <text>订单</text>
    </view>
  </view>
</view>