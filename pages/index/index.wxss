.container {
  padding: 20rpx;
  padding-bottom: 140rpx;
  background: linear-gradient(180deg, #f8f8f8 0%, #ffffff 100%);
  min-height: 100vh;
}

.header {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 24rpx;
  padding: 40rpx 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  box-shadow: 0 8rpx 32rpx rgba(255, 107, 107, 0.25);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.15) 0%,
    transparent 60%
  );
}

.shop-logo {
  width: 140rpx;
  height: 140rpx;
  border-radius: 50%;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 80rpx;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.shop-logo:active {
  transform: scale(0.95);
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 12rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.shop-address,
.shop-phone,
.shop-hours {
  font-size: 26rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 8rpx;
  display: flex;
  align-items: center;
}

.section {
  margin-bottom: 30rpx;
  background-color: #ffffff;
  border-radius: 24rpx;
  padding: 32rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 50%, #ffb347 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.section:hover::before {
  opacity: 1;
}

.section-title {
  font-size: 34rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 28rpx;
  padding-left: 20rpx;
  border-left: 8rpx solid #ff6b6b;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.hot-dishes {
  white-space: nowrap;
  padding: 16rpx 8rpx;
}

.hot-dish-item {
  display: inline-block;
  width: 240rpx;
  margin-right: 24rpx;
  background: linear-gradient(180deg, #ffffff 0%, #fefefe 100%);
  border-radius: 24rpx;
  padding: 20rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.hot-dish-item::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  transform: scaleX(0);
  transition: transform 0.35s ease;
}

.hot-dish-item:active {
  transform: scale(0.96);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.15);
}

.hot-dish-item:active::after {
  transform: scaleX(1);
}

.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  background-color: #f5f5f5;
}

.dish-image-placeholder {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
  position: relative;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 20rpx;
  box-shadow: inset 0 -4rpx 12rpx rgba(255, 107, 107, 0.15);
}

.dish-name {
  display: block;
  font-size: 28rpx;
  color: #333333;
  margin-bottom: 8rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.dish-price {
  display: block;
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  margin: -16rpx;
}

.category-item {
  width: calc(50% - 32rpx);
  margin: 16rpx;
  background: linear-gradient(145deg, #ffffff 0%, #f8f8f8 100%);
  border-radius: 24rpx;
  padding: 32rpx 24rpx;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.1);
  text-align: center;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.category-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  transform: scaleX(0);
  transition: transform 0.35s ease;
}

.category-item:active {
  transform: translateY(-6rpx) scale(0.98);
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.18);
}

.category-item:active::before {
  transform: scaleX(1);
}

.category-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  background-color: #f5f5f5;
}

.category-image-placeholder {
  width: 128rpx;
  height: 128rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  margin-left: auto;
  margin-right: auto;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
}

.category-name {
  display: block;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.scan-btn {
  width: 100%;
  height: 120rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 36rpx;
  font-weight: bold;
  border-radius: 70rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 10rpx 32rpx rgba(255, 107, 107, 0.35);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.scan-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.25),
    transparent
  );
  transition: left 0.5s ease;
}

.scan-btn:active::before {
  left: 100%;
}

.scan-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.45);
}

.scan-icon {
  width: 56rpx;
  height: 56rpx;
  margin-right: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  padding: 10rpx;
  font-size: 36rpx;
}

.nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: linear-gradient(180deg, #ffffff 0%, #f8f8f8 100%);
  display: flex;
  padding: 12rpx 0;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(12rpx + env(safe-area-inset-bottom));
  z-index: 1000;
  border-top: 1rpx solid rgba(0, 0, 0, 0.06);
}

.nav-item {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  font-size: 22rpx;
  color: #999999;
  padding: 8rpx 0;
  font-weight: 500;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
}

.nav-item.active {
  color: #ff6b6b;
}

.nav-item::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%) scaleX(0);
  width: 40rpx;
  height: 5rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 3rpx;
  transition: transform 0.3s ease;
}

.nav-item.active::after {
  transform: translateX(-50%) scaleX(1);
}

.nav-icon-wrapper {
  width: 72rpx;
  height: 72rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
  margin-bottom: 4rpx;
  transition: all 0.3s ease;
  position: relative;
}

.nav-item.active .nav-icon-wrapper {
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.12) 0%, rgba(255, 142, 83, 0.12) 100%);
}

.nav-icon {
  font-size: 42rpx;
  transition: transform 0.3s ease;
}

.nav-item:active {
  color: #ff6b6b;
}

.nav-item:active .nav-icon-wrapper {
  transform: scale(0.9);
  background: linear-gradient(135deg, rgba(255, 107, 107, 0.2) 0%, rgba(255, 142, 83, 0.2) 100%);
}

.nav-item:active .nav-icon {
  transform: scale(1.05);
}

.nav-item:active::after {
  transform: translateX(-50%) scaleX(1);
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}
