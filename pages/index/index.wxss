.container {
  padding: 12rpx;
  padding-bottom: 12rpx;
  background: linear-gradient(180deg, #f8f8f8 0%, #ffffff 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.15) 0%,
    transparent 60%
  );
}

.shop-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.shop-logo:active {
  transform: scale(0.95);
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.shop-address,
.shop-phone,
.shop-hours {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.shop-address:active,
.shop-phone:active {
  opacity: 0.7;
}

.banner-section {
  margin-bottom: 12rpx;
  overflow: hidden;
}

.table-selector-section {
  margin-bottom: 12rpx;
}

.table-selector-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: 0 4rpx 16rpx rgba(102, 126, 234, 0.3);
}

.table-selector-label {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
}

.table-selector-value {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.table-selector-arrow {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

.banner-item {
  width: 100%;
  box-sizing: border-box;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 16rpx;
  padding: 40rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 180rpx;
}

.banner-item::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
}

.banner-image-placeholder {
  font-size: 96rpx;
  margin-bottom: 0;
  text-align: center;
}

.banner-title {
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

.section {
  margin-bottom: 12rpx;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.section::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 50%, #ffb347 100%);
  opacity: 0;
  transition: opacity 0.3s ease;
}

.section:hover::before {
  opacity: 1;
}

.section-title {
  font-size: 26rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
  padding-left: 12rpx;
  border-left: 4rpx solid #ff6b6b;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.hot-dishes-grid {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.hot-dish-item {
  width: calc(33.333% - 12rpx);
  margin: 6rpx;
  background: linear-gradient(180deg, #ffffff 0%, #fefefe 100%);
  border-radius: 12rpx;
  padding: 12rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.hot-dish-item::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  transform: scaleX(0);
  transition: transform 0.35s ease;
}

.hot-dish-item:active {
  transform: scale(0.96);
  box-shadow: 0 3rpx 10rpx rgba(0, 0, 0, 0.15);
}

.hot-dish-item:active::after {
  transform: scaleX(1);
}

.dish-image {
  width: 200rpx;
  height: 200rpx;
  border-radius: 20rpx;
  margin-bottom: 16rpx;
  background-color: #f5f5f5;
}

.dish-image-placeholder {
  width: 100%;
  height: 120rpx;
  border-radius: 12rpx;
  margin-bottom: 8rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  position: relative;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 20rpx;
  box-shadow: inset 0 -4rpx 12rpx rgba(255, 107, 107, 0.15);
}

.dish-name {
  display: block;
  font-size: 22rpx;
  color: #333333;
  margin-bottom: 4rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.dish-price {
  display: block;
  font-size: 24rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
}

.category-item {
  width: calc(25% - 16rpx);
  margin: 8rpx;
  background: linear-gradient(145deg, #ffffff 0%, #f8f8f8 100%);
  border-radius: 16rpx;
  padding: 16rpx 8rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  text-align: center;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.category-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 8rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  transform: scaleX(0);
  transition: transform 0.35s ease;
}

.category-item:active {
  transform: translateY(-6rpx) scale(0.98);
  box-shadow: 0 12rpx 28rpx rgba(0, 0, 0, 0.18);
}

.category-item:active::before {
  transform: scaleX(1);
}

.category-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 16rpx;
  background-color: #f5f5f5;
}

.category-image-placeholder {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-bottom: 6rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  margin-left: auto;
  margin-right: auto;
  box-shadow: 0 2rpx 6rpx rgba(255, 107, 107, 0.12);
}

.category-name {
  display: block;
  font-size: 20rpx;
  color: #333333;
  font-weight: 500;
}

.scan-btn {
  width: 100%;
  height: 80rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 28rpx;
  font-weight: bold;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.3);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.scan-btn::before {
  content: "";
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(
    90deg,
    transparent,
    rgba(255, 255, 255, 0.25),
    transparent
  );
  transition: left 0.5s ease;
}

.scan-btn:active::before {
  left: 100%;
}

.scan-btn:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.45);
}

.scan-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  background: rgba(255, 255, 255, 0.25);
  border-radius: 50%;
  padding: 8rpx;
  font-size: 24rpx;
}

@keyframes float {
  0%,
  100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes pulse {
  0%,
  100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

@keyframes shimmer {
  0% {
    background-position: -200% 0;
  }
  100% {
    background-position: 200% 0;
  }
}

.table-selector-modal {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  display: flex;
  align-items: flex-end;
  z-index: 1000;
}

.table-selector-content {
  width: 100%;
  max-height: 70vh;
  background: #ffffff;
  border-radius: 32rpx 32rpx 0 0;
  overflow: hidden;
}

.table-selector-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 32rpx 32rpx 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.table-selector-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.table-selector-close {
  font-size: 48rpx;
  color: #999999;
  line-height: 1;
}

.table-selector-list {
  max-height: calc(70vh - 120rpx);
  padding: 12rpx;
}

.table-option {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx 20rpx;
  margin-bottom: 8rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.table-option:active {
  background: #e8e8e8;
  transform: scale(0.98);
}

.table-option-text {
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
}

.table-option-icon {
  font-size: 32rpx;
  color: #667eea;
  font-weight: bold;
}
