.container {
  padding: 20rpx;
}

.header {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
}

.shop-logo {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-right: 20rpx;
  background-color: #FFFFFF;
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #FFFFFF;
  margin-bottom: 10rpx;
}

.shop-address,
.shop-phone,
.shop-hours {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.9);
  margin-bottom: 6rpx;
}

.section {
  margin-bottom: 30rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 20rpx;
  padding-left: 10rpx;
  border-left: 6rpx solid #FF6B6B;
}

.hot-dishes {
  white-space: nowrap;
}

.hot-dish-item {
  display: inline-block;
  width: 200rpx;
  margin-right: 20rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 10rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.dish-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 12rpx;
  margin-bottom: 10rpx;
}

.dish-name {
  display: block;
  font-size: 26rpx;
  color: #333333;
  margin-bottom: 6rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-price {
  display: block;
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.category-list {
  display: flex;
  flex-wrap: wrap;
  margin: -10rpx;
}

.category-item {
  width: calc(50% - 20rpx);
  margin: 10rpx;
  background-color: #FFFFFF;
  border-radius: 16rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
  text-align: center;
}

.category-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.category-name {
  display: block;
  font-size: 28rpx;
  color: #333333;
}

.scan-btn {
  width: 100%;
  height: 100rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 32rpx;
  border-radius: 50rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border: none;
}

.scan-icon {
  width: 48rpx;
  height: 48rpx;
  margin-right: 16rpx;
}

.nav-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background-color: #FFFFFF;
  display: flex;
  padding: 20rpx 0;
  box-shadow: 0 -4rpx 20rpx rgba(0, 0, 0, 0.1);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
}

.nav-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #999999;
  padding: 10rpx 0;
}

.nav-item:active {
  color: #FF6B6B;
}