.container {
  padding: var(--spacing-md);
  padding-bottom: var(--spacing-md);
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-white) 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  background: var(--primary-color);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl) var(--spacing-2xl);
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
  transition: all var(--transition-base);
}

.header:active {
  transform: scale(0.99);
}

.header::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.08) 0%,
    transparent 60%
  );
}

.shop-logo {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-lg);
  margin-right: var(--spacing-lg);
  background: rgba(255, 255, 255, 0.15);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  position: relative;
  z-index: 1;
  transition: transform var(--transition-base);
  backdrop-filter: blur(10rpx);
}

.shop-logo:active {
  transform: scale(0.95);
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--bg-white);
  margin-bottom: var(--spacing-xs);
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.shop-address,
.shop-phone,
.shop-hours {
  font-size: var(--font-size-sm);
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: var(--spacing-xs);
  display: flex;
  align-items: center;
  transition: all var(--transition-base);
}

.shop-address:active,
.shop-phone:active {
  opacity: 0.7;
}

.banner-section {
  margin-bottom: var(--spacing-md);
  overflow: hidden;
}

.table-selector-section {
  margin-bottom: var(--spacing-md);
}

.table-info-card {
  background: var(--primary-color);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl);
  display: flex;
  align-items: center;
  justify-content: space-between;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.table-info-card:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-md);
}

.table-info-label {
  font-size: var(--font-size-md);
  color: var(--bg-white);
  font-weight: 500;
}

.table-info-value {
  font-size: var(--font-size-xl);
  color: var(--bg-white);
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.order-mode-section {
  margin-bottom: var(--spacing-md);
  display: flex;
  gap: var(--spacing-md);
}

.mode-item {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-2xl) var(--spacing-xl);
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
  min-height: 180rpx;
}

.mode-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: var(--primary-color);
  transform: scaleX(0);
  transition: transform var(--transition-base);
}

.mode-item:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.mode-item:active::before {
  transform: scaleX(1);
}

.mode-icon {
  width: 88rpx;
  height: 88rpx;
  border-radius: var(--radius-lg);
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  margin-bottom: var(--spacing-md);
  flex-shrink: 0;
}

.mode-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  text-align: center;
}

.mode-title {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
}

.mode-desc {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.mode-arrow {
  display: none;
}

.banner-item {
  width: 100%;
  box-sizing: border-box;
  background: var(--primary-color);
  border-radius: var(--radius-xl);
  padding: var(--spacing-3xl) var(--spacing-2xl);
  box-shadow: var(--shadow-sm);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 220rpx;
  transition: all var(--transition-base);
}

.banner-item:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-md);
}

.banner-item::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
}

.banner-image-placeholder {
  font-size: 88rpx;
  margin-bottom: 0;
  text-align: center;
}

.banner-title {
  display: block;
  font-size: var(--font-size-xl);
  color: var(--bg-white);
  font-weight: 600;
}

