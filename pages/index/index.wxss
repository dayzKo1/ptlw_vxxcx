.container {
  padding: 12rpx;
  padding-bottom: 12rpx;
  background: linear-gradient(180deg, #f8f8f8 0%, #ffffff 100%);
  min-height: 100vh;
  box-sizing: border-box;
}

.header {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 16rpx;
  padding: 20rpx 24rpx;
  display: flex;
  align-items: center;
  margin-bottom: 12rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
  position: relative;
  overflow: hidden;
}

.header::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 100%;
  height: 100%;
  background: radial-gradient(
    circle,
    rgba(255, 255, 255, 0.15) 0%,
    transparent 60%
  );
}

.shop-logo {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-right: 16rpx;
  background: linear-gradient(135deg, #ffffff 0%, #f8f8f8 100%);
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  position: relative;
  z-index: 1;
  transition: transform 0.3s ease;
}

.shop-logo:active {
  transform: scale(0.95);
}

.shop-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.shop-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 6rpx;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.1);
}

.shop-address,
.shop-phone,
.shop-hours {
  font-size: 22rpx;
  color: rgba(255, 255, 255, 0.95);
  margin-bottom: 4rpx;
  display: flex;
  align-items: center;
  transition: all 0.3s ease;
}

.shop-address:active,
.shop-phone:active {
  opacity: 0.7;
}

.banner-section {
  margin-bottom: 12rpx;
  overflow: hidden;
}

.table-selector-section {
  margin-bottom: 12rpx;
}

.table-info-card {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.table-info-label {
  font-size: 26rpx;
  color: #ffffff;
  font-weight: 500;
}

.table-info-value {
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.order-mode-section {
  margin-bottom: 12rpx;
}

.mode-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 12rpx;
  display: flex;
  align-items: center;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  position: relative;
  overflow: hidden;
}

.mode-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 6rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  transform: scaleX(0);
  transition: transform 0.35s ease;
}

.mode-item:active {
  transform: scale(0.98);
  box-shadow: 0 6rpx 16rpx rgba(0, 0, 0, 0.12);
}

.mode-item:active::before {
  transform: scaleX(1);
}

.mode-icon {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 40rpx;
  margin-right: 20rpx;
  flex-shrink: 0;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.15);
}

.mode-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.mode-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 6rpx;
}

.mode-desc {
  font-size: 22rpx;
  color: #999999;
}

.mode-arrow {
  font-size: 32rpx;
  color: #cccccc;
  font-weight: bold;
  flex-shrink: 0;
}

.banner-item {
  width: 100%;
  box-sizing: border-box;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 16rpx;
  padding: 40rpx 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(255, 107, 107, 0.2);
  position: relative;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-height: 180rpx;
}

.banner-item::after {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: radial-gradient(circle at 30% 30%, rgba(255, 255, 255, 0.15) 0%, transparent 50%);
}

.banner-image-placeholder {
  font-size: 96rpx;
  margin-bottom: 0;
  text-align: center;
}

.banner-title {
  display: block;
  font-size: 32rpx;
  color: #ffffff;
  font-weight: bold;
  text-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.2);
}

