.container {
  min-height: 100vh;
  background: var(--bg-light);
  display: flex;
  flex-direction: column;
}

.header {
  background: var(--primary-color);
  padding: var(--spacing-2xl);
  padding-top: calc(var(--spacing-2xl) + env(safe-area-inset-top));
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-info {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: var(--font-size-2xl);
  font-weight: 600;
  color: var(--bg-white);
  margin-bottom: var(--spacing-xs);
}

.header-subtitle {
  font-size: var(--font-size-sm);
  color: rgba(255, 255, 255, 0.8);
}

.header-actions {
  display: flex;
  align-items: center;
}

.order-btn {
  font-size: var(--font-size-sm);
  padding: var(--spacing-md) var(--spacing-xl);
  background: rgba(255, 255, 255, 0.2);
  color: var(--bg-white);
  border-radius: var(--radius-full);
  border: 1rpx solid rgba(255, 255, 255, 0.3);
}

.order-btn::after {
  border: none;
}

.tabs {
  display: flex;
  background: var(--bg-white);
  padding: 0 var(--spacing-xl);
  border-bottom: 1rpx solid var(--border-color);
}

.tab-item {
  flex: 1;
  text-align: center;
  padding: var(--spacing-xl) 0;
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 6rpx;
  background: var(--primary-color);
  border-radius: var(--radius-full);
}

.category-scroll {
  white-space: nowrap;
  padding: var(--spacing-lg);
  background: var(--bg-white);
  border-bottom: 1rpx solid var(--border-color);
}

.category-item {
  display: inline-block;
  padding: var(--spacing-md) var(--spacing-xl);
  margin-right: var(--spacing-md);
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  background: var(--bg-light);
  border-radius: var(--radius-full);
}

.category-item.active {
  background: var(--primary-color);
  color: var(--bg-white);
}

.dish-list {
  flex: 1;
  padding: var(--spacing-xl);
  padding-bottom: 150rpx;
}

.dish-item {
  background: var(--bg-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-xl);
  box-shadow: var(--shadow-sm);
}

.dish-image {
  width: 100%;
  height: 300rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  position: relative;
  margin-bottom: var(--spacing-lg);
}

.dish-image image {
  width: 100%;
  height: 100%;
}

.status-badge {
  position: absolute;
  top: var(--spacing-md);
  right: var(--spacing-md);
  padding: var(--spacing-xs) var(--spacing-md);
  border-radius: var(--radius-sm);
  font-size: var(--font-size-xs);
  color: var(--bg-white);
}

.status-badge.online {
  background: #4caf50;
}

.status-badge.offline {
  background: #9e9e9e;
}

.dish-info {
  margin-bottom: var(--spacing-lg);
}

.dish-name-row {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-xs);
}

.dish-name {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-right: var(--spacing-md);
}

.dish-tag {
  font-size: var(--font-size-xs);
  padding: 2rpx 12rpx;
  border-radius: var(--radius-sm);
  margin-right: var(--spacing-xs);
}

.dish-tag.hot {
  background: #ffebee;
  color: #e53935;
}

.dish-tag.new {
  background: #e8f5e9;
  color: #43a047;
}

.dish-category {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-xs);
}

.dish-desc {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-md);
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.dish-price-row {
  display: flex;
  align-items: center;
}

.dish-price {
  font-size: var(--font-size-xl);
  color: var(--primary-color);
  font-weight: 600;
}

.spicy-level {
  margin-left: var(--spacing-lg);
  font-size: var(--font-size-sm);
  color: #ff5722;
}

.dish-actions {
  display: flex;
  gap: var(--spacing-md);
  padding-top: var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
}

.action-btn {
  flex: 1;
  font-size: var(--font-size-sm);
  padding: var(--spacing-md) 0;
  border-radius: var(--radius-md);
  border: none;
}

.action-btn::after {
  border: none;
}

.online-btn {
  background: #e8f5e9;
  color: #43a047;
}

.offline-btn {
  background: #fff3e0;
  color: #f57c00;
}

.edit-btn {
  background: #e3f2fd;
  color: #1976d2;
}

.delete-btn {
  background: #ffebee;
  color: #e53935;
}

.fab {
  position: fixed;
  right: 40rpx;
  bottom: calc(120rpx + env(safe-area-inset-bottom));
  width: 100rpx;
  height: 100rpx;
  background: var(--primary-color);
  border-radius: var(--radius-full);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(255, 107, 107, 0.4);
}

.fab-icon {
  font-size: 48rpx;
  color: var(--bg-white);
  font-weight: 300;
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 100;
}

.modal-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: var(--bg-white);
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  z-index: 101;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: var(--spacing-xl);
  border-bottom: 1rpx solid var(--border-color);
}

.modal-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
}

.modal-close {
  font-size: 40rpx;
  color: var(--text-tertiary);
  padding: var(--spacing-sm);
}

.modal-content {
  flex: 1;
  padding: var(--spacing-xl);
  max-height: 60vh;
}

.form-item {
  margin-bottom: var(--spacing-xl);
}

.form-label {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-md);
}

.form-label.required::after {
  content: '*';
  color: #e53935;
  margin-left: var(--spacing-xs);
}

.form-input {
  width: 100%;
  height: 80rpx;
  padding: 0 var(--spacing-lg);
  background: var(--bg-light);
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
}

.form-textarea {
  width: 100%;
  height: 160rpx;
  padding: var(--spacing-lg);
  background: var(--bg-light);
  border-radius: var(--radius-md);
  font-size: var(--font-size-md);
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 80rpx;
  padding: 0 var(--spacing-lg);
  background: var(--bg-light);
  border-radius: var(--radius-md);
}

.picker-arrow {
  color: var(--text-tertiary);
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  border-radius: var(--radius-md);
  overflow: hidden;
  background: var(--bg-light);
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.upload-icon {
  font-size: 48rpx;
  color: var(--text-tertiary);
}

.upload-text {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-top: var(--spacing-xs);
}

.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-row .form-label {
  margin-bottom: 0;
}

.modal-footer {
  display: flex;
  gap: var(--spacing-lg);
  padding: var(--spacing-xl);
  padding-bottom: calc(var(--spacing-xl) + env(safe-area-inset-bottom));
  border-top: 1rpx solid var(--border-color);
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  border-radius: var(--radius-lg);
  font-size: var(--font-size-lg);
  font-weight: 500;
  border: none;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.modal-btn.confirm {
  background: var(--primary-color);
  color: var(--bg-white);
}

.empty {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 200rpx 0;
}

.empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-xl);
}

.empty-text {
  font-size: var(--font-size-lg);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-2xl);
}

.add-first-btn {
  background: var(--primary-color);
  color: var(--bg-white);
  padding: var(--spacing-lg) var(--spacing-2xl);
  border-radius: var(--radius-full);
  font-size: var(--font-size-lg);
}

.add-first-btn::after {
  border: none;
}

.loading {
  display: flex;
  justify-content: center;
  padding: var(--spacing-2xl) 0;
}

.loading-text {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}