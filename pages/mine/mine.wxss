.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f8f8 0%, #ffffff 100%);
  padding-bottom: 40rpx;
}

.user-card {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  padding: 60rpx 40rpx;
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.1) 0%, transparent 50%);
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
  margin-right: 24rpx;
  background: rgba(255, 255, 255, 0.2);
}

.user-detail {
  flex: 1;
}

.nickname {
  display: block;
  font-size: 36rpx;
  font-weight: bold;
  color: #ffffff;
  margin-bottom: 8rpx;
}

.user-id {
  display: block;
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.8);
}

.order-section {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.section-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
}

.more-btn {
  font-size: 26rpx;
  color: #999999;
}

.order-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: 24rpx;
}

.order-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 16rpx 0;
  transition: all 0.3s ease;
}

.order-tab.active {
  transform: scale(1.05);
}

.tab-icon {
  font-size: 44rpx;
  margin-bottom: 8rpx;
}

.tab-text {
  font-size: 24rpx;
  color: #666666;
}

.order-tab.active .tab-text {
  color: #ff6b6b;
  font-weight: bold;
}

.order-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.order-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.order-item:active {
  transform: scale(0.98);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-number {
  font-size: 26rpx;
  color: #666666;
}

.order-status {
  font-size: 26rpx;
  font-weight: bold;
  padding: 4rpx 12rpx;
  border-radius: 12rpx;
}

.status-pending {
  color: #ff6b6b;
  background: rgba(255, 107, 107, 0.1);
}

.status-paid {
  color: #ff8e53;
  background: rgba(255, 142, 83, 0.1);
}

.status-completed {
  color: #07c160;
  background: rgba(7, 193, 96, 0.1);
}

.status-cancelled {
  color: #999999;
  background: rgba(153, 153, 153, 0.1);
}

.order-content {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
  margin-bottom: 16rpx;
}

.dish-preview {
  width: calc(50% - 16rpx);
  margin: 8rpx;
  display: flex;
  align-items: center;
  background: #f8f8f8;
  border-radius: 12rpx;
  padding: 12rpx;
}

.dish-image-placeholder {
  font-size: 36rpx;
  margin-right: 12rpx;
}

.dish-name {
  flex: 1;
  font-size: 24rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-quantity {
  font-size: 24rpx;
  color: #999999;
  margin-left: 8rpx;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-time {
  font-size: 24rpx;
  color: #999999;
}

.order-price {
  font-size: 32rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 120rpx;
  margin-bottom: 20rpx;
}

.empty-text {
  display: block;
  font-size: 28rpx;
  color: #999999;
}

.menu-section {
  background: #ffffff;
  margin: 20rpx;
  border-radius: 20rpx;
  padding: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: #f8f8f8;
}

.menu-icon {
  font-size: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
}

.menu-arrow {
  font-size: 28rpx;
  color: #999999;
}

.logout-section {
  padding: 20rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.3);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  transform: scale(0.98);
}