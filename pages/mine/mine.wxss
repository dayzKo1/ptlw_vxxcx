.container {
  min-height: 100vh;
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-white) 100%);
  padding-bottom: var(--spacing-4xl);
}

.user-card {
  background: var(--primary-color);
  padding: var(--spacing-3xl) var(--spacing-xl);
  position: relative;
  overflow: hidden;
}

.user-card::before {
  content: "";
  position: absolute;
  top: -50%;
  right: -50%;
  width: 200%;
  height: 200%;
  background: radial-gradient(circle, rgba(255,255,255, 0.08) 0%, transparent 50%);
}

.user-info {
  display: flex;
  align-items: center;
  position: relative;
  z-index: 1;
}

.avatar {
  width: 110rpx;
  height: 110rpx;
  border-radius: var(--radius-full);
  border: 3rpx solid rgba(255,255,255, 0.25);
  margin-right: var(--spacing-xl);
  background: rgba(255,255,255, 0.15);
}

.user-detail {
  flex: 1;
}

.nickname {
  display: block;
  font-size: var(--font-size-3xl);
  font-weight: 600;
  color: var(--bg-white);
  margin-bottom: var(--spacing-xs);
}

.user-id {
  display: block;
  font-size: var(--font-size-sm);
  color: rgba(255,255,255, 0.75);
}

.order-section {
  background: var(--bg-white);
  margin: var(--spacing-xl);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-sm);
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-xl);
}

.section-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
}

.more-btn {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

.order-tabs {
  display: flex;
  justify-content: space-around;
  margin-bottom: var(--spacing-xl);
}

.order-tab {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: var(--spacing-lg) 0;
  transition: all var(--transition-base);
}

.order-tab.active {
  transform: scale(1.05);
}

.tab-icon {
  font-size: 40rpx;
  margin-bottom: var(--spacing-sm);
}

.tab-text {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.order-tab.active .tab-text {
  color: var(--primary-color);
  font-weight: 600;
}

.order-list {
  max-height: 600rpx;
  overflow-y: auto;
}

.order-item {
  background: var(--bg-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.order-item:active {
  transform: scale(0.98);
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.order-number {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
}

.order-status {
  font-size: var(--font-size-md);
  font-weight: 600;
  padding: 4rpx var(--spacing-md);
  border-radius: var(--radius-md);
}

.status-pending {
  color: var(--primary-color);
  background: rgba(255, 90, 95, 0.08);
}

.status-paid {
  color: var(--primary-light);
  background: rgba(255, 122, 127, 0.08);
}

.status-completed {
  color: #07c160;
  background: rgba(7, 193, 96, 0.08);
}

.status-cancelled {
  color: var(--text-tertiary);
  background: rgba(153, 153, 153, 0.08);
}

.order-content {
  display: flex;
  flex-wrap: wrap;
  margin: -8rpx;
  margin-bottom: var(--spacing-lg);
}

.dish-preview {
  width: calc(50% - 16rpx);
  margin: 8rpx;
  display: flex;
  align-items: center;
  background: var(--bg-light);
  border-radius: var(--radius-md);
  padding: var(--spacing-md);
}

.dish-image-placeholder {
  font-size: 32rpx;
  margin-right: var(--spacing-md);
}

.dish-name {
  flex: 1;
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-quantity {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-left: var(--spacing-sm);
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-top: var(--spacing-lg);
  border-top: 1rpx solid var(--border-color);
}

.order-time {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.order-price {
  font-size: var(--font-size-xl);
  color: var(--primary-color);
  font-weight: 600;
}

.empty-tip {
  text-align: center;
  padding: 80rpx 0;
}

.empty-icon {
  display: block;
  font-size: 110rpx;
  margin-bottom: var(--spacing-xl);
}

.empty-text {
  display: block;
  font-size: var(--font-size-lg);
  color: var(--text-tertiary);
}

.menu-section {
  background: var(--bg-white);
  margin: var(--spacing-xl);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  box-shadow: var(--shadow-sm);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-xl) 0;
  border-bottom: 1rpx solid var(--border-color);
  transition: all var(--transition-base);
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: var(--bg-light);
}

.menu-icon {
  font-size: 36rpx;
  margin-right: var(--spacing-xl);
}

.menu-text {
  flex: 1;
  font-size: var(--font-size-lg);
  color: var(--text-primary);
}

.menu-arrow {
  font-size: var(--font-size-lg);
  color: var(--text-tertiary);
}

.logout-section {
  padding: var(--spacing-xl);
}

.logout-btn {
  width: 100%;
  height: 84rpx;
  background: var(--primary-color);
  color: var(--bg-white);
  border-radius: var(--radius-full);
  font-size: var(--font-size-xl);
  font-weight: 600;
  border: none;
  box-shadow: var(--shadow-sm);
}

.logout-btn::after {
  border: none;
}

.logout-btn:active {
  transform: scale(0.98);
}