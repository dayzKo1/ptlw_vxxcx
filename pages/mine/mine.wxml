<view class="container">
  <view class="user-card">
    <view class="user-info">
      <image class="avatar" src="{{userInfo.avatarUrl || '/images/default-avatar.png'}}" mode="aspectFill"></image>
      <view class="user-detail">
        <text class="nickname">{{userInfo.nickName || '未登录'}}</text>
        <text class="user-id">ID: {{userInfo.openid || '---'}}</text>
        <text class="user-role" wx:if="{{isMerchant}}">商户身份</text>
      </view>
    </view>
  </view>

  <view class="menu-section">
    <view class="menu-item merchant" wx:if="{{isMerchant}}" bindtap="handleMerchantHome">
      <text class="menu-icon">🏪</text>
      <text class="menu-text">商户后台</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleAddress">
      <text class="menu-text">收货地址</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleTableQRCode">
      <text class="menu-text">桌号二维码</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleSettings">
      <text class="menu-text">设置</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="menu-item" bindtap="handleAbout">
      <text class="menu-text">关于我们</text>
      <text class="menu-arrow">></text>
    </view>
  </view>

  <view class="admin-section" wx:if="{{isDev}}">
    <view class="admin-title">开发者工具</view>
    <view class="menu-item" bindtap="handleAddMerchant">
      <text class="menu-text">设为商户</text>
      <text class="menu-arrow">></text>
    </view>
    <view class="dev-toggle-row">
      <text class="menu-text">开发模式</text>
      <switch checked="{{isDev}}" bindchange="toggleDevMode" />
    </view>
  </view>

  <view class="admin-section" wx:if="{{!isDev}}">
    <view class="dev-toggle-row" bindtap="toggleDevModeHint">
      <text class="menu-text" style="color: #ccc;">版本 1.0.0</text>
    </view>
  </view>

  <view class="logout-section">
    <button class="logout-btn" bindtap="handleLogout">退出登录</button>
  </view>
</view>