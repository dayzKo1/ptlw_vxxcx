.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding: 24rpx;
  box-sizing: border-box;
}

.form-section {
  background: #ffffff;
  border-radius: 16rpx;
  padding: 32rpx 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
}

.form-item {
  display: flex;
  align-items: center;
  padding: 24rpx 0;
  border-bottom: 1rpx solid #f0f0f0;
}

.form-item:last-child {
  border-bottom: none;
}

.form-item.checkbox-item {
  justify-content: space-between;
}

.form-label {
  width: 160rpx;
  font-size: 28rpx;
  color: #333333;
  font-weight: 500;
  flex-shrink: 0;
}

.form-input {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
}

.form-textarea {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  min-height: 120rpx;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  margin-top: 16rpx;
  width: 100%;
  box-sizing: border-box;
}

.picker-value {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  text-align: right;
  padding-right: 20rpx;
}

.btn-section {
  padding: 24rpx;
}

.save-btn {
  width: 100%;
  height: 96rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.35);
  transition: all 0.3s ease;
  margin-bottom: 24rpx;
}

.save-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.delete-btn {
  width: 100%;
  height: 96rpx;
  background: #ffffff;
  color: #ff6b6b;
  font-size: 32rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: 2rpx solid #ff6b6b;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.delete-btn:active {
  transform: scale(0.98);
  background: #fff5f5;
}
