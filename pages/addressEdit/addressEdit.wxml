<view class="container">
  <view class="form-section">
    <view class="form-item">
      <text class="form-label">联系人</text>
      <input 
        class="form-input" 
        placeholder="请输入联系人姓名" 
        value="{{formData.name}}"
        bindinput="onInput"
        data-field="name"
      />
    </view>

    <view class="form-item">
      <text class="form-label">手机号</text>
      <input 
        class="form-input" 
        type="number"
        maxlength="11"
        placeholder="请输入手机号" 
        value="{{formData.phone}}"
        bindinput="onInput"
        data-field="phone"
      />
    </view>

    <view class="form-item">
      <text class="form-label">所在地区</text>
      <picker 
        mode="region" 
        value="{{region}}" 
        bindchange="onRegionChange"
      >
        <view class="picker-value">
          {{region[0] || '请选择'}} {{region[1] || ''}} {{region[2] || ''}}
        </view>
      </picker>
    </view>

    <view class="form-item">
      <text class="form-label">详细地址</text>
      <textarea 
        class="form-textarea" 
        placeholder="请输入详细地址，如：小区、楼号、门牌号" 
        value="{{formData.detail}}"
        bindinput="onInput"
        data-field="detail"
        maxlength="100"
      ></textarea>
    </view>

    <view class="form-item checkbox-item">
      <text class="form-label">设为默认地址</text>
      <checkbox 
        checked="{{formData.isDefault}}" 
        bindtap="onDefaultChange"
        color="#FF6B6B"
      />
    </view>
  </view>

  <view class="btn-section">
    <button class="save-btn" bindtap="saveAddress">保存地址</button>
    <button class="delete-btn" wx:if="{{addressId}}" bindtap="deleteAddress">删除地址</button>
  </view>
</view>
