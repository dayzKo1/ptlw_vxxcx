.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: linear-gradient(180deg, var(--bg-light) 0%, var(--bg-white) 100%);
  overflow: hidden;
}

.tabs {
  display: flex;
  background: var(--bg-white);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: var(--shadow-sm);
}

.tab-item {
  flex: 1;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-xl);
  color: var(--text-secondary);
  position: relative;
  transition: all var(--transition-base);
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

.order-list {
  flex: 1;
  padding: var(--spacing-xl);
  overflow-y: auto;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 220rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: var(--spacing-3xl);
  opacity: 0.6;
  font-size: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

.empty-text {
  font-size: var(--font-size-xl);
  color: var(--text-tertiary);
  font-weight: 500;
}

.order-item {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.order-item:active {
  transform: scale(0.99);
  box-shadow: var(--shadow-md);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-color);
}

.order-no {
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  font-weight: 500;
}

.order-status {
  font-size: var(--font-size-md);
  color: var(--primary-color);
  font-weight: 600;
  padding: 8rpx var(--spacing-lg);
  background: var(--primary-bg);
  border-radius: var(--radius-xl);
}

.order-info {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.table-number {
  font-size: var(--font-size-md);
  color: var(--text-primary);
  margin-right: var(--spacing-xl);
  font-weight: 500;
}

.order-time {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.order-items {
  margin-bottom: var(--spacing-lg);
}

.item-preview {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.dish-image {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-lg);
  background-color: var(--bg-light);
}

.dish-image-placeholder {
  width: 72rpx;
  height: 72rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-lg);
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 52rpx;
  position: relative;
  overflow: hidden;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: var(--radius-lg);
  box-shadow: inset 0 -4rpx 12rpx rgba(255, 90, 95, 0.15);
}

.dish-name {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.dish-quantity {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  font-weight: 500;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: var(--spacing-lg);
  border-top: 1rpx solid var(--border-color);
}

.total-price {
  font-size: var(--font-size-xl);
  color: var(--primary-color);
  font-weight: 600;
}

.action-btns {
  display: flex;
  gap: var(--spacing-md);
}

.action-btn {
  padding: var(--spacing-sm) var(--spacing-lg);
  font-size: var(--font-size-sm);
  font-weight: 500;
  border-radius: var(--radius-xl);
  border: none;
  line-height: 1;
  transition: all var(--transition-base);
}

.action-btn:active {
  transform: scale(0.96);
}

.pay-btn {
  background: var(--primary-color);
  color: var(--bg-white);
  box-shadow: var(--shadow-sm);
}

.cancel-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.reorder-btn {
  background: var(--primary-color);
  color: var(--bg-white);
  box-shadow: var(--shadow-sm);
}
