.container {
  min-height: 100vh;
  background-color: #F8F8F8;
}

.tabs {
  display: flex;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.05);
}

.tab-item {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s ease;
}

.tab-item.active {
  color: #FF6B6B;
  font-weight: bold;
}

.tab-item.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 6rpx;
  background: linear-gradient(90deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 3rpx;
}

.order-list {
  padding: 24rpx;
  min-height: calc(100vh - 100rpx);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 40rpx;
  opacity: 0.5;
  font-size: 180rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.empty-text {
  font-size: 32rpx;
  color: #999999;
  font-weight: 500;
}

.order-item {
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.order-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 24rpx;
  padding-bottom: 24rpx;
  border-bottom: 1rpx solid #F0F0F0;
}

.order-no {
  font-size: 26rpx;
  color: #666666;
  font-weight: 500;
}

.order-status {
  font-size: 28rpx;
  color: #FF6B6B;
  font-weight: bold;
  padding: 8rpx 20rpx;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
  border-radius: 20rpx;
}

.order-info {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
}

.table-number {
  font-size: 28rpx;
  color: #333333;
  margin-right: 30rpx;
  font-weight: 500;
}

.order-time {
  font-size: 26rpx;
  color: #999999;
}

.order-items {
  margin-bottom: 24rpx;
}

.item-preview {
  display: flex;
  align-items: center;
  margin-bottom: 16rpx;
}

.dish-image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background-color: #F5F5F5;
}

.dish-image-placeholder {
  width: 100rpx;
  height: 100rpx;
  border-radius: 12rpx;
  margin-right: 20rpx;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
}

.dish-name {
  flex: 1;
  font-size: 28rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.dish-quantity {
  font-size: 28rpx;
  color: #999999;
  font-weight: 500;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 24rpx;
  border-top: 1rpx solid #F0F0F0;
}

.total-price {
  font-size: 36rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.action-btns {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  padding: 16rpx 36rpx;
  font-size: 26rpx;
  font-weight: 500;
  border-radius: 30rpx;
  border: none;
  line-height: 1;
  transition: all 0.3s ease;
}

.action-btn:active {
  transform: scale(0.95);
}

.pay-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.cancel-btn {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #666666;
}

.reorder-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}