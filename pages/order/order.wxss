.container {
  min-height: 100vh;
  background: linear-gradient(180deg, #f8f8f8 0%, #ffffff 100%);
}

.tabs {
  display: flex;
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 6rpx 20rpx rgba(0, 0, 0, 0.06);
}

.tab-item {
  flex: 1;
  height: 108rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  color: #666666;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.tab-item.active {
  color: #ff6b6b;
  font-weight: bold;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 100rpx;
  height: 8rpx;
  background: linear-gradient(90deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 4rpx;
}

.order-list {
  padding: 28rpx;
  min-height: calc(100vh - 108rpx);
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 220rpx;
}

.empty-icon {
  width: 220rpx;
  height: 220rpx;
  margin-bottom: 48rpx;
  opacity: 0.6;
  font-size: 200rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

@keyframes pulse {
  0%, 100% {
    transform: scale(1);
  }
  50% {
    transform: scale(1.08);
  }
}

.empty-text {
  font-size: 34rpx;
  color: #999999;
  font-weight: 500;
}

.order-item {
  background: linear-gradient(145deg, #ffffff 0%, #fafafa 100%);
  border-radius: 24rpx;
  padding: 32rpx;
  margin-bottom: 28rpx;
  box-shadow: 0 6rpx 24rpx rgba(0, 0, 0, 0.1);
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.order-item:active {
  transform: scale(0.99);
  box-shadow: 0 3rpx 12rpx rgba(0, 0, 0, 0.15);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 28rpx;
  padding-bottom: 28rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.order-no {
  font-size: 28rpx;
  color: #666666;
  font-weight: 500;
}

.order-status {
  font-size: 30rpx;
  color: #ff6b6b;
  font-weight: bold;
  padding: 10rpx 24rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  border-radius: 24rpx;
}

.order-info {
  display: flex;
  align-items: center;
  margin-bottom: 28rpx;
}

.table-number {
  font-size: 30rpx;
  color: #333333;
  margin-right: 32rpx;
  font-weight: 500;
}

.order-time {
  font-size: 28rpx;
  color: #999999;
}

.order-items {
  margin-bottom: 28rpx;
}

.item-preview {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.dish-image {
  width: 110rpx;
  height: 110rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background-color: #f5f5f5;
}

.dish-image-placeholder {
  width: 110rpx;
  height: 110rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  background: linear-gradient(135deg, #fff5f5 0%, #ffe8e8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 60rpx;
  position: relative;
  overflow: hidden;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 16rpx;
  box-shadow: inset 0 -4rpx 12rpx rgba(255, 107, 107, 0.15);
}

.dish-name {
  flex: 1;
  font-size: 30rpx;
  color: #333333;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-weight: 500;
}

.dish-quantity {
  font-size: 30rpx;
  color: #999999;
  font-weight: 500;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: 28rpx;
  border-top: 1rpx solid #f0f0f0;
}

.total-price {
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.action-btns {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  padding: 18rpx 40rpx;
  font-size: 28rpx;
  font-weight: 500;
  border-radius: 34rpx;
  border: none;
  line-height: 1;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.action-btn:active {
  transform: scale(0.96);
}

.pay-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.35);
}

.cancel-btn {
  background: linear-gradient(135deg, #f5f5f5 0%, #eeeeee 100%);
  color: #666666;
}

.reorder-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  box-shadow: 0 6rpx 20rpx rgba(255, 107, 107, 0.35);
}
