.container {
  min-height: 100vh;
  background: var(--bg-light);
  display: flex;
  flex-direction: column;
}

.tabs {
  display: flex;
  background: var(--bg-white);
  position: sticky;
  top: 0;
  z-index: 100;
}

.tab-item {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: var(--text-secondary);
  position: relative;
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 48rpx;
  height: 4rpx;
  background: var(--primary-color);
  border-radius: 2rpx;
}

.order-list {
  flex: 1;
  padding: 24rpx;
  padding-bottom: calc(24rpx + env(safe-area-inset-bottom));
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-state .empty-icon {
  font-size: 100rpx;
  margin-bottom: 24rpx;
}

.empty-state .empty-text {
  font-size: 28rpx;
  color: var(--text-tertiary);
}

.order-card {
  background: var(--bg-white);
  border-radius: 16rpx;
  margin-bottom: 24rpx;
  overflow: hidden;
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 24rpx;
  background: var(--bg-light);
}

.header-left {
  display: flex;
  flex-direction: column;
}

.order-no {
  font-size: 26rpx;
  color: var(--text-primary);
  font-weight: 500;
}

.order-time {
  font-size: 22rpx;
  color: var(--text-tertiary);
  margin-top: 4rpx;
}

.order-status {
  font-size: 24rpx;
  font-weight: 500;
  padding: 6rpx 16rpx;
  border-radius: 8rpx;
}

.order-status.status-0 {
  background: #fff3e0;
  color: #f57c00;
}

.order-status.status-1 {
  background: #e3f2fd;
  color: #1976d2;
}

.order-status.status-2 {
  background: #e8f5e9;
  color: #388e3c;
}

.order-status.status-3 {
  background: #fafafa;
  color: #757575;
}

.order-content {
  padding: 20rpx 24rpx;
}

.order-items {
  display: flex;
  flex-direction: column;
}

.item-row {
  display: flex;
  align-items: center;
  padding: 12rpx 0;
}

.item-name {
  flex: 1;
  font-size: 28rpx;
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.item-qty {
  font-size: 26rpx;
  color: var(--text-tertiary);
  margin: 0 24rpx;
}

.item-price {
  font-size: 26rpx;
  color: var(--text-secondary);
  width: 100rpx;
  text-align: right;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 24rpx;
  border-top: 1rpx solid var(--border-light);
}

.footer-left {
  display: flex;
  align-items: center;
  flex-wrap: wrap;
}

.table-tag {
  font-size: 22rpx;
  color: var(--primary-color);
  background: var(--primary-bg);
  padding: 4rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 16rpx;
}

.total-text {
  font-size: 26rpx;
  color: var(--text-secondary);
}

.total-price {
  font-size: 32rpx;
  color: var(--primary-color);
  font-weight: 600;
  margin-left: 8rpx;
}

.footer-right {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.btn-text {
  font-size: 26rpx;
  color: var(--text-tertiary);
  padding: 12rpx 20rpx;
}

.btn-primary {
  font-size: 26rpx;
  color: var(--bg-white);
  background: var(--primary-color);
  padding: 12rpx 28rpx;
  border-radius: 32rpx;
  font-weight: 500;
}

.btn-primary:active {
  opacity: 0.8;
}

.load-more {
  text-align: center;
  padding: 24rpx;
  font-size: 26rpx;
  color: var(--text-tertiary);
}