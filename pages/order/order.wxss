.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-color);
}

.tabs {
  display: flex;
  background: var(--bg-white);
  position: sticky;
  top: 0;
  z-index: 100;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.03);
}

.tab-item {
  flex: 1;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  color: var(--text-secondary);
  position: relative;
  transition: all var(--transition-base);
}

.tab-item.active {
  color: var(--primary-color);
  font-weight: 600;
}

.tab-item.active::after {
  content: "";
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 80rpx;
  height: 4rpx;
  background: linear-gradient(90deg, var(--primary-color) 0%, var(--primary-light) 100%);
  border-radius: 2rpx;
}

.order-list {
  flex: 1;
  padding: var(--spacing-xl);
  padding-bottom: calc(var(--spacing-xl) + env(safe-area-inset-bottom));
  overflow-y: auto;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding-top: 200rpx;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  margin-bottom: var(--spacing-2xl);
  border-radius: 50%;
  background: linear-gradient(135deg, var(--primary-bg) 0%, var(--bg-white) 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  animation: float 3s ease-in-out infinite;
}

@keyframes float {
  0%, 100% {
    transform: translateY(0);
  }
  50% {
    transform: translateY(-12rpx);
  }
}

.empty-text {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

.order-item {
  background: var(--bg-white);
  border-radius: var(--radius-xl);
  padding: var(--spacing-xl);
  margin-bottom: var(--spacing-lg);
  box-shadow: var(--shadow-sm);
  border: 1rpx solid var(--border-light);
  transition: all var(--transition-base);
}

.order-item:active {
  transform: scale(0.99);
  box-shadow: 0 1rpx 8rpx rgba(0, 0, 0, 0.03);
}

.order-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
  padding-bottom: var(--spacing-lg);
  border-bottom: 1rpx solid var(--border-light);
}

.order-no {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
}

.order-status {
  font-size: var(--font-size-sm);
  color: var(--primary-color);
  font-weight: 600;
  padding: 6rpx 16rpx;
  background: var(--primary-bg);
  border-radius: var(--radius-full);
}

.order-info {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-lg);
}

.table-number {
  font-size: var(--font-size-sm);
  color: var(--text-primary);
  margin-right: var(--spacing-xl);
}

.order-time {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.order-items {
  margin-bottom: var(--spacing-lg);
}

.item-preview {
  display: flex;
  align-items: center;
  margin-bottom: var(--spacing-md);
}

.item-preview:last-child {
  margin-bottom: 0;
}

.dish-image-placeholder {
  width: 64rpx;
  height: 64rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-lg);
  background: linear-gradient(135deg, var(--primary-bg) 0%, var(--bg-white) 100%);
  flex-shrink: 0;
}

.dish-name {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  margin-right: var(--spacing-md);
}

.dish-quantity {
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  flex-shrink: 0;
}

.order-footer {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding-top: var(--spacing-lg);
  border-top: 1rpx solid var(--border-light);
}

.total-price {
  font-size: var(--font-size-lg);
  color: var(--primary-color);
  font-weight: 700;
}

.action-btns {
  display: flex;
  gap: var(--spacing-md);
  flex-shrink: 0;
}

.action-btn {
  padding: var(--spacing-md) var(--spacing-xl);
  font-size: var(--font-size-sm);
  font-weight: 600;
  border-radius: var(--radius-full);
  border: none;
  line-height: 1.5;
  transition: all var(--transition-base);
  box-sizing: border-box;
}

.action-btn::after {
  border: none;
}

.action-btn:active {
  transform: scale(0.96);
}

.pay-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 112, 0.2);
  min-width: 140rpx;
}

.pay-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 112, 0.2);
}

.cancel-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
  border: 1rpx solid var(--border-color);
  min-width: 140rpx;
}

.cancel-btn:active {
  background: var(--border-light);
}

.reorder-btn {
  background: linear-gradient(135deg, var(--primary-color) 0%, var(--primary-light) 100%);
  color: var(--bg-white);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 112, 0.2);
  min-width: 140rpx;
}

.reorder-btn:active {
  box-shadow: 0 2rpx 8rpx rgba(255, 107, 112, 0.2);
}
