.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: var(--bg-light);
}

.header-section {
  background: var(--bg-white);
  padding: var(--spacing-lg) var(--spacing-xl) var(--spacing-md);
  z-index: 100;
  border-bottom: 1rpx solid var(--border-color);
}

.delivery-mode-switch {
  display: flex;
  background: var(--bg-light);
  border-radius: var(--radius-md);
  padding: var(--spacing-xs);
  margin-bottom: var(--spacing-md);
}

.mode-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: var(--spacing-md);
  border-radius: var(--radius-sm);
  transition: all var(--transition-base);
}

.mode-item.active {
  background: var(--primary-color);
}

.mode-icon {
  font-size: var(--font-size-md);
  margin-right: var(--spacing-xs);
}

.mode-text {
  font-size: var(--font-size-md);
  font-weight: 500;
  color: var(--text-secondary);
}

.mode-item.active .mode-text {
  color: var(--bg-white);
  font-weight: 600;
}

.search-bar {
  position: relative;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: var(--bg-light);
  border-radius: var(--radius-xl);
  padding: var(--spacing-md) var(--spacing-xl);
  transition: all var(--transition-base);
}

.search-input-wrapper:focus-within {
  background: var(--bg-white);
  border: 1rpx solid var(--primary-color);
}

.search-icon {
  font-size: var(--font-size-md);
  margin-right: var(--spacing-sm);
  color: var(--text-tertiary);
}

.search-input {
  flex: 1;
  font-size: var(--font-size-md);
  color: var(--text-primary);
}

.clear-icon {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
  padding: var(--spacing-xs);
  margin-left: var(--spacing-xs);
}

.menu-layout {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.category-sidebar {
  width: 140rpx;
  background: var(--bg-light);
  height: 100%;
  overflow-y: auto;
}

.category-item {
  padding: var(--spacing-lg) var(--spacing-md);
  font-size: var(--font-size-sm);
  color: var(--text-secondary);
  text-align: center;
  border-bottom: 1rpx solid var(--border-light);
  position: relative;
  transition: all var(--transition-base);
}

.category-item.active {
  background: var(--bg-white);
  color: var(--primary-color);
  font-weight: 600;
}

.category-item.active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 4rpx;
  height: 36rpx;
  background: var(--primary-color);
  border-radius: 0 4rpx 4rpx 0;
}

.category-emoji {
  display: block;
  font-size: var(--font-size-lg);
  margin-bottom: var(--spacing-xs);
}

.dish-list {
  flex: 1;
  height: 100%;
  padding: var(--spacing-lg);
  box-sizing: border-box;
  overflow-y: auto;
  background-color: var(--bg-white);
}

.category-section {
  margin-bottom: var(--spacing-2xl);
}

.category-header {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-lg);
  padding-left: var(--spacing-lg);
  border-left: 4rpx solid var(--primary-color);
  display: flex;
  align-items: center;
  letter-spacing: 0.5rpx;
}

.dish-item {
  display: flex;
  background: var(--bg-white);
  border-radius: var(--radius-lg);
  padding: var(--spacing-lg);
  margin-bottom: var(--spacing-lg);
  border: 1rpx solid var(--border-color);
  transition: all var(--transition-base);
  position: relative;
  overflow: hidden;
}

.dish-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 4rpx;
  height: 100%;
  background: var(--primary-color);
  transform: scaleY(0);
  transition: transform var(--transition-base);
}

.dish-item:active {
  transform: scale(0.99);
  background: var(--bg-lighter);
}

.dish-item:active::before {
  transform: scaleY(1);
}

.dish-image {
  width: 130rpx;
  height: 130rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-lg);
  flex-shrink: 0;
  background-color: var(--bg-light);
}

.dish-image-placeholder {
  width: 130rpx;
  height: 130rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-lg);
  flex-shrink: 0;
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 64rpx;
  position: relative;
  overflow: hidden;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: var(--radius-lg);
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.dish-name {
  font-size: var(--font-size-lg);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-sm);
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-desc {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: var(--spacing-sm);
  line-height: 1.4;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: var(--spacing-xs);
  margin-bottom: var(--spacing-sm);
}

.dish-tag {
  padding: 2rpx 8rpx;
  background: var(--primary-bg);
  color: var(--primary-color);
  font-size: var(--font-size-xs);
  border-radius: var(--radius-sm);
  font-weight: 500;
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 0;
}

.dish-price {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
  font-weight: 600;
  flex-shrink: 0;
}

.quantity-control {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: var(--spacing-md);
}

.minus-btn,
.plus-btn {
  width: 44rpx;
  height: 44rpx;
  border-radius: var(--radius-lg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: 600;
  transition: all var(--transition-base);
}

.minus-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.minus-btn:active {
  transform: scale(0.9);
  background: var(--border-light);
}

.plus-btn {
  background: var(--primary-color);
  color: var(--bg-white);
}

.plus-btn:active {
  transform: scale(0.9);
}

.quantity {
  width: 48rpx;
  text-align: center;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: 600;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 120rpx;
  background: var(--bg-white);
  display: flex;
  align-items: center;
  padding: 0 var(--spacing-xl);
  padding-bottom: calc(var(--spacing-md) + env(safe-area-inset-bottom));
  z-index: 1000;
  border-top: 1rpx solid var(--border-color);
  box-sizing: border-box;
}

.cart-info {
  flex: 1;
  display: flex;
  align-items: center;
  min-width: 0;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: var(--spacing-md);
  flex-shrink: 0;
}

.cart-icon {
  width: 76rpx;
  height: 76rpx;
  background: var(--primary-color);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 38rpx;
  transition: transform var(--transition-base);
  flex-shrink: 0;
}

.cart-icon:active {
  transform: scale(0.92);
}

.cart-badge {
  position: absolute;
  top: -4rpx;
  right: -4rpx;
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: var(--font-size-xs);
  min-width: 28rpx;
  height: 28rpx;
  border-radius: 14rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 var(--spacing-xs);
  animation: badge-pop 0.3s ease;
  box-sizing: border-box;
  line-height: 1;
}

@keyframes badge-pop {
  0% {
    transform: scale(0.5);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.cart-total {
  display: flex;
  flex-direction: column;
  flex: 1;
  min-width: 0;
  margin-right: var(--spacing-md);
}

.total-price {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
  font-weight: 600;
  line-height: 1;
}

.total-desc {
  font-size: var(--font-size-xs);
  color: var(--text-tertiary);
  line-height: 1;
}

.checkout-btn {
  width: 200rpx;
  height: 76rpx;
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: 28rpx;
  font-weight: 600;
  border-radius: var(--radius-full);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all var(--transition-base);
  flex-shrink: 0;
  box-sizing: border-box;
}

.checkout-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.search-result {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: var(--spacing-lg);
  overflow: hidden;
}

.search-result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: var(--spacing-lg);
  padding: 0 var(--spacing-sm);
}

.search-result-title {
  font-size: var(--font-size-lg);
  font-weight: bold;
  color: var(--text-primary);
}

.search-result-count {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
}

.search-result-list {
  flex: 1;
  overflow-y: auto;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: var(--spacing-xl);
  opacity: 0.5;
}

.empty-text {
  font-size: var(--font-size-md);
  color: var(--text-tertiary);
}

.cart-drawer-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 999;
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
}

.cart-drawer-mask.show {
  opacity: 1;
  visibility: visible;
}

.cart-drawer {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 75vh;
  background: var(--bg-white);
  z-index: 1000;
  border-radius: var(--radius-xl) var(--radius-xl) 0 0;
  transform: translateY(100%);
  transition: transform var(--transition-base);
  display: flex;
  flex-direction: column;
  box-sizing: border-box;
}

.cart-drawer.show {
  transform: translateY(0);
}

.cart-drawer-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-xl);
  border-bottom: 1rpx solid var(--border-color);
  flex-shrink: 0;
  box-sizing: border-box;
}

.cart-drawer-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
}

.close-drawer {
  font-size: var(--font-size-xl);
  color: var(--text-tertiary);
  padding: var(--spacing-sm);
}

.cart-drawer-content {
  flex: 1;
  display: flex;
  flex-direction: column;
  overflow: hidden;
  min-height: 0;
}

.cart-drawer-list {
  flex: 1;
  padding: var(--spacing-lg);
  overflow-y: auto;
  box-sizing: border-box;
}

.cart-drawer-item {
  display: flex;
  align-items: center;
  padding: var(--spacing-md) 0;
  border-bottom: 1rpx solid var(--border-color);
  box-sizing: border-box;
}

.cart-drawer-item:last-child {
  border-bottom: none;
}

.cart-dish-image-placeholder {
  width: 90rpx;
  height: 90rpx;
  border-radius: var(--radius-md);
  margin-right: var(--spacing-md);
  flex-shrink: 0;
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
}

.cart-dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
  padding-right: var(--spacing-xs);
}

.cart-dish-name {
  font-size: var(--font-size-md);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-xs);
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  line-height: 1.2;
}

.cart-dish-price {
  font-size: var(--font-size-lg);
  color: var(--primary-color);
  font-weight: 600;
  line-height: 1;
}

.cart-quantity-control {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: var(--spacing-sm);
  gap: var(--spacing-xs);
}

.cart-quantity-control .minus-btn,
.cart-quantity-control .plus-btn {
  width: 40rpx;
  height: 40rpx;
  border-radius: var(--radius-md);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: var(--font-size-lg);
  font-weight: 600;
  transition: all var(--transition-base);
  flex-shrink: 0;
}

.cart-quantity-control .minus-btn {
  background: var(--bg-light);
  color: var(--text-secondary);
}

.cart-quantity-control .minus-btn:active {
  transform: scale(0.9);
  background: var(--border-light);
}

.cart-quantity-control .plus-btn {
  background: var(--primary-color);
  color: var(--bg-white);
}

.cart-quantity-control .plus-btn:active {
  transform: scale(0.9);
}

.cart-quantity-control .quantity {
  width: 40rpx;
  text-align: center;
  font-size: var(--font-size-md);
  color: var(--text-primary);
  font-weight: 600;
  line-height: 1;
  flex-shrink: 0;
}

.empty-cart {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-cart .empty-icon {
  font-size: 120rpx;
  margin-bottom: var(--spacing-2xl);
  opacity: 0.5;
}

.cart-drawer-footer {
  padding: var(--spacing-2xl);
  border-top: 1rpx solid var(--border-color);
  background: var(--bg-white);
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.drawer-total {
  display: flex;
  flex-direction: column;
  flex: 1;
}

.drawer-total-label {
  font-size: var(--font-size-sm);
  color: var(--text-tertiary);
  margin-bottom: var(--spacing-xs);
}

.drawer-total-price {
  font-size: var(--font-size-2xl);
  color: var(--primary-color);
  font-weight: 600;
}

.drawer-checkout-btn {
  width: 200rpx;
  height: 76rpx;
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: var(--font-size-xl);
  font-weight: 600;
  border-radius: var(--radius-full);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
  flex-shrink: 0;
}

.drawer-checkout-btn:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}

.dish-modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0, 0, 0, 0.5);
  z-index: 2000;
  opacity: 0;
  visibility: hidden;
  transition: all var(--transition-base);
}

.dish-modal-mask.show {
  opacity: 1;
  visibility: visible;
}

.dish-modal {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  max-height: 85vh;
  background: var(--bg-white);
  z-index: 2001;
  border-radius: var(--radius-2xl) var(--radius-2xl) 0 0;
  transform: translateY(100%);
  transition: transform var(--transition-base);
  display: flex;
  flex-direction: column;
}

.dish-modal.show {
  transform: translateY(0);
}

.dish-modal-content {
  display: flex;
  flex-direction: column;
  height: 100%;
}

.dish-modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: var(--spacing-xl);
  border-bottom: 1rpx solid var(--border-color);
}

.dish-modal-title {
  font-size: var(--font-size-xl);
  font-weight: 600;
  color: var(--text-primary);
}

.close-modal {
  font-size: var(--font-size-xl);
  color: var(--text-tertiary);
  padding: var(--spacing-sm);
}

.dish-modal-body {
  flex: 1;
  padding: var(--spacing-2xl);
  overflow-y: auto;
}

.modal-dish-image {
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto var(--spacing-2xl);
  border-radius: var(--radius-xl);
  background: var(--primary-bg);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 120rpx;
}

.modal-dish-info {
  text-align: center;
}

.modal-dish-name {
  display: block;
  font-size: var(--font-size-2xl);
  font-weight: 600;
  color: var(--text-primary);
  margin-bottom: var(--spacing-md);
}

.modal-dish-desc {
  display: block;
  font-size: var(--font-size-md);
  color: var(--text-secondary);
  margin-bottom: var(--spacing-lg);
  line-height: 1.6;
}

.modal-dish-tags {
  display: flex;
  justify-content: center;
  gap: var(--spacing-md);
  margin-bottom: var(--spacing-lg);
}

.modal-dish-tag {
  padding: 4rpx var(--spacing-lg);
  background: var(--primary-bg);
  color: var(--primary-color);
  font-size: var(--font-size-sm);
  border-radius: var(--radius-md);
  font-weight: 500;
}

.modal-dish-price {
  margin-top: var(--spacing-2xl);
}

.modal-price {
  font-size: var(--font-size-4xl);
  color: var(--primary-color);
  font-weight: 600;
}

.dish-modal-footer {
  padding: var(--spacing-2xl);
  border-top: 1rpx solid var(--border-color);
  background: var(--bg-white);
  padding-bottom: calc(var(--spacing-2xl) + env(safe-area-inset-bottom));
}

.modal-add-btn {
  width: 100%;
  height: 96rpx;
  background: var(--primary-color);
  color: var(--bg-white);
  font-size: var(--font-size-xl);
  font-weight: 600;
  border-radius: var(--radius-full);
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: var(--shadow-sm);
  transition: all var(--transition-base);
}

.modal-add-btn:active {
  transform: scale(0.98);
  box-shadow: var(--shadow-md);
}
