.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background-color: #F8F8F8;
}

.menu-layout {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.category-sidebar {
  width: 200rpx;
  background-color: #F8F8F8;
  height: 100%;
  overflow-y: auto;
}

.category-item {
  padding: 32rpx 20rpx;
  font-size: 28rpx;
  color: #666666;
  text-align: center;
  border-bottom: 1rpx solid #EEEEEE;
  position: relative;
  transition: all 0.3s ease;
}

.category-item.active {
  background: linear-gradient(135deg, #FFFFFF 0%, #FFF5F5 100%);
  color: #FF6B6B;
  font-weight: bold;
}

.category-item.active::before {
  content: '';
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 8rpx;
  height: 48rpx;
  background: linear-gradient(180deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 0 6rpx 6rpx 0;
}

.category-emoji {
  display: block;
  font-size: 40rpx;
  margin-bottom: 8rpx;
}

.dish-list {
  flex: 1;
  height: 100%;
  padding: 24rpx;
  box-sizing: border-box;
  overflow-y: auto;
}

.category-section {
  margin-bottom: 40rpx;
}

.category-header {
  font-size: 30rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 24rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #FF6B6B;
  display: flex;
  align-items: center;
}

.dish-item {
  display: flex;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  border-radius: 20rpx;
  padding: 24rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.dish-item:active {
  transform: scale(0.98);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.12);
}

.dish-image {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background-color: #F5F5F5;
}

.dish-image-placeholder {
  width: 180rpx;
  height: 180rpx;
  border-radius: 16rpx;
  margin-right: 24rpx;
  flex-shrink: 0;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 100rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.dish-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 12rpx;
}

.dish-desc {
  font-size: 24rpx;
  color: #999999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 12rpx;
  line-height: 1.6;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 8rpx;
  margin-bottom: 12rpx;
}

.dish-tag {
  padding: 4rpx 12rpx;
  background: linear-gradient(135deg, #FFF5F5 0%, #FFE8E8 100%);
  color: #FF6B6B;
  font-size: 20rpx;
  border-radius: 8rpx;
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.dish-price {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.quantity-control {
  display: flex;
  align-items: center;
}

.minus-btn,
.plus-btn {
  width: 56rpx;
  height: 56rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.minus-btn {
  background: linear-gradient(135deg, #F5F5F5 0%, #EEEEEE 100%);
  color: #666666;
}

.minus-btn:active {
  transform: scale(0.9);
}

.plus-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.3);
}

.plus-btn:active {
  transform: scale(0.9);
}

.quantity {
  width: 70rpx;
  text-align: center;
  font-size: 30rpx;
  color: #333333;
  font-weight: bold;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  background: linear-gradient(135deg, #FFFFFF 0%, #FAFAFA 100%);
  display: flex;
  align-items: center;
  padding: 0 30rpx;
  box-shadow: 0 -8rpx 32rpx rgba(0, 0, 0, 0.15);
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 1000;
}

.cart-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 24rpx;
}

.cart-icon {
  width: 100rpx;
  height: 100rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 50rpx;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
}

.cart-badge {
  position: absolute;
  top: -8rpx;
  right: -8rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 20rpx;
  min-width: 40rpx;
  height: 40rpx;
  border-radius: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 10rpx;
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}

.cart-total {
  display: flex;
  flex-direction: column;
}

.total-price {
  font-size: 40rpx;
  color: #FF6B6B;
  font-weight: bold;
}

.total-desc {
  font-size: 22rpx;
  color: #999999;
}

.checkout-btn {
  width: 220rpx;
  height: 90rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E53 100%);
  color: #FFFFFF;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 50rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 8rpx 24rpx rgba(255, 107, 107, 0.3);
  transition: all 0.3s ease;
}

.checkout-btn:active {
  transform: scale(0.98);
  box-shadow: 0 4rpx 12rpx rgba(255, 107, 107, 0.4);
}