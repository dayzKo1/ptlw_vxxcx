.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
  background: #f8f8f8;
}

.header-section {
  background: #ffffff;
  padding: 16rpx 20rpx 12rpx;
  z-index: 100;
  border-bottom: 1rpx solid #f0f0f0;
}

.delivery-mode-switch {
  display: flex;
  background: #f5f5f5;
  border-radius: 10rpx;
  padding: 4rpx;
  margin-bottom: 12rpx;
}

.mode-item {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 12rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.mode-item.active {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
}

.mode-icon {
  font-size: 28rpx;
  margin-right: 6rpx;
}

.mode-text {
  font-size: 26rpx;
  font-weight: 500;
  color: #666666;
}

.mode-item.active .mode-text {
  color: #ffffff;
  font-weight: bold;
}

.search-bar {
  position: relative;
}

.search-input-wrapper {
  display: flex;
  align-items: center;
  background: #f5f5f5;
  border-radius: 40rpx;
  padding: 12rpx 20rpx;
  transition: all 0.3s ease;
}

.search-input-wrapper:focus-within {
  background: #ffffff;
  border: 2rpx solid #ff6b6b;
}

.search-icon {
  font-size: 28rpx;
  margin-right: 10rpx;
  color: #999999;
}

.search-input {
  flex: 1;
  font-size: 26rpx;
  color: #333333;
}

.clear-icon {
  font-size: 28rpx;
  color: #999999;
  padding: 6rpx;
  margin-left: 6rpx;
}

.menu-layout {
  flex: 1;
  display: flex;
  overflow: hidden;
}

.category-sidebar {
  width: 140rpx;
  background: #f5f5f5;
  height: 100%;
  overflow-y: auto;
}

.category-item {
  padding: 20rpx 12rpx;
  font-size: 24rpx;
  color: #666666;
  text-align: center;
  border-bottom: 1rpx solid #eeeeee;
  position: relative;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.category-item.active {
  background: #ffffff;
  color: #ff6b6b;
  font-weight: bold;
}

.category-item.active::before {
  content: "";
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
  width: 6rpx;
  height: 40rpx;
  background: linear-gradient(180deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 0 5rpx 5rpx 0;
}

.category-emoji {
  display: block;
  font-size: 32rpx;
  margin-bottom: 4rpx;
}

.dish-list {
  flex: 1;
  height: 100%;
  padding: 16rpx;
  box-sizing: border-box;
  overflow-y: auto;
  background-color: #ffffff;
}

.category-section {
  margin-bottom: 32rpx;
}

.category-header {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 16rpx;
  padding-left: 16rpx;
  border-left: 6rpx solid #ff6b6b;
  display: flex;
  align-items: center;
  letter-spacing: 1rpx;
}

.dish-item {
  display: flex;
  background: #ffffff;
  border-radius: 16rpx;
  padding: 16rpx;
  margin-bottom: 16rpx;
  border: 1rpx solid #f0f0f0;
  transition: all 0.3s ease;
  position: relative;
  overflow: hidden;
}

.dish-item::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 6rpx;
  height: 100%;
  background: linear-gradient(180deg, #ff6b6b 0%, #ff8e53 100%);
  transform: scaleY(0);
  transition: transform 0.35s ease;
}

.dish-item:active {
  transform: scale(0.99);
  background: #fafafa;
}

.dish-item:active::before {
  transform: scaleY(1);
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 14rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  background-color: #f5f5f5;
}

.dish-image-placeholder {
  width: 140rpx;
  height: 140rpx;
  border-radius: 14rpx;
  margin-right: 16rpx;
  flex-shrink: 0;
  background: #fff5f5;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 72rpx;
  position: relative;
  overflow: hidden;
}

.dish-image-placeholder::after {
  content: "";
  position: absolute;
  inset: 0;
  border-radius: 16rpx;
}

.dish-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  min-width: 0;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
  margin-bottom: 8rpx;
  letter-spacing: 0.5rpx;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dish-desc {
  font-size: 22rpx;
  color: #999999;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  margin-bottom: 8rpx;
  line-height: 1.4;
}

.dish-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 6rpx;
  margin-bottom: 8rpx;
}

.dish-tag {
  padding: 3rpx 10rpx;
  background: #fff5f5;
  color: #ff6b6b;
  font-size: 18rpx;
  border-radius: 6rpx;
  font-weight: 500;
}

.dish-bottom {
  display: flex;
  align-items: center;
  justify-content: space-between;
  min-width: 0;
}

.dish-price {
  font-size: 34rpx;
  color: #ff6b6b;
  font-weight: bold;
  flex-shrink: 0;
}

.quantity-control {
  display: flex;
  align-items: center;
  flex-shrink: 0;
  margin-left: 12rpx;
}

.minus-btn,
.plus-btn {
  width: 48rpx;
  height: 48rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.minus-btn {
  background: #f5f5f5;
  color: #666666;
}

.minus-btn:active {
  transform: scale(0.9);
  background: #eeeeee;
}

.plus-btn {
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
}

.plus-btn:active {
  transform: scale(0.9);
}

.quantity {
  width: 52rpx;
  text-align: center;
  font-size: 26rpx;
  color: #333333;
  font-weight: bold;
}

.cart-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 130rpx;
  background: #ffffff;
  display: flex;
  align-items: center;
  padding: 0 24rpx;
  padding-bottom: calc(20rpx + env(safe-area-inset-bottom));
  z-index: 1000;
  border-top: 1rpx solid #f0f0f0;
}

.cart-info {
  flex: 1;
  display: flex;
  align-items: center;
}

.cart-icon-wrapper {
  position: relative;
  margin-right: 20rpx;
}

.cart-icon {
  width: 88rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 44rpx;
  transition: transform 0.3s ease;
}

.cart-icon:active {
  transform: scale(0.92);
}

.cart-badge {
  position: absolute;
  top: -6rpx;
  right: -6rpx;
  background: #ff6b6b;
  color: #ffffff;
  font-size: 18rpx;
  min-width: 32rpx;
  height: 32rpx;
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 0 8rpx;
  animation: badge-pop 0.3s ease;
}

@keyframes badge-pop {
  0% {
    transform: scale(0.5);
  }
  50% {
    transform: scale(1.2);
  }
  100% {
    transform: scale(1);
  }
}

.cart-total {
  display: flex;
  flex-direction: column;
}

.total-price {
  font-size: 40rpx;
  color: #ff6b6b;
  font-weight: bold;
}

.total-desc {
  font-size: 22rpx;
  color: #999999;
}

.checkout-btn {
  width: 220rpx;
  height: 88rpx;
  background: linear-gradient(135deg, #ff6b6b 0%, #ff8e53 100%);
  color: #ffffff;
  font-size: 30rpx;
  font-weight: bold;
  border-radius: 48rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.35s cubic-bezier(0.4, 0, 0.2, 1);
}

.checkout-btn:active {
  transform: scale(0.98);
  opacity: 0.9;
}

.search-result {
  flex: 1;
  display: flex;
  flex-direction: column;
  padding: 16rpx;
  overflow: hidden;
}

.search-result-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 16rpx;
  padding: 0 8rpx;
}

.search-result-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333333;
}

.search-result-count {
  font-size: 22rpx;
  color: #999999;
}

.search-result-list {
  flex: 1;
  overflow-y: auto;
}

.empty-result {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-icon {
  font-size: 100rpx;
  margin-bottom: 20rpx;
  opacity: 0.5;
}

.empty-text {
  font-size: 26rpx;
  color: #999999;
}
