.container {
  min-height: 100vh;
  background: #f5f5f5;
  padding-bottom: 120rpx;
}

.header {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  padding: 40rpx 30rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.header-info {
  display: flex;
  flex-direction: column;
}

.header-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #fff;
}

.header-subtitle {
  font-size: 24rpx;
  color: rgba(255,255,255,0.8);
  margin-top: 8rpx;
}

.switch-btn {
  background: rgba(255,255,255,0.2);
  color: #fff;
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  border: none;
}

.stats-row {
  display: flex;
  background: #fff;
  padding: 30rpx 0;
  margin-bottom: 20rpx;
}

.stat-item {
  flex: 1;
  text-align: center;
  border-right: 1rpx solid #eee;
}

.stat-item:last-child {
  border-right: none;
}

.stat-value {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  display: block;
}

.stat-label {
  font-size: 22rpx;
  color: #999;
  margin-top: 8rpx;
  display: block;
}

.main-tabs {
  display: flex;
  background: #fff;
  margin-bottom: 20rpx;
}

.main-tab {
  flex: 1;
  text-align: center;
  padding: 24rpx 0;
  font-size: 28rpx;
  color: #666;
  position: relative;
}

.main-tab.active {
  color: #FF6B6B;
  font-weight: bold;
}

.main-tab.active::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 50%;
  transform: translateX(-50%);
  width: 60rpx;
  height: 4rpx;
  background: #FF6B6B;
  border-radius: 2rpx;
}

.content-area {
  min-height: 60vh;
}

.sub-tabs {
  display: flex;
  background: #fff;
  padding: 0 20rpx;
}

.sub-tab {
  flex: 1;
  text-align: center;
  padding: 20rpx 0;
  font-size: 26rpx;
  color: #666;
  white-space: nowrap;
}

.sub-tab.active {
  color: #FF6B6B;
  font-weight: bold;
}

.order-list, .dish-list, .table-list {
  height: calc(100vh - 380rpx);
  padding: 20rpx;
}

.order-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.order-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.order-info {
  display: flex;
  flex-direction: column;
}

.order-no {
  font-size: 26rpx;
  color: #333;
}

.order-time {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.order-status {
  font-size: 24rpx;
  padding: 6rpx 16rpx;
  border-radius: 20rpx;
}

.status-0 { background: #FFF3E0; color: #FF9800; }
.status-1 { background: #E3F2FD; color: #2196F3; }
.status-2 { background: #E8F5E9; color: #4CAF50; }
.status-3 { background: #F5F5F5; color: #999; }
.status-4 { background: #FFEBEE; color: #F44336; }

.order-table {
  background: #FFF8E1;
  padding: 12rpx 20rpx;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
}

.table-label {
  font-size: 24rpx;
  color: #666;
}

.table-number {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B6B;
  margin-left: 8rpx;
}

.order-items {
  border-top: 1rpx solid #f0f0f0;
  padding-top: 16rpx;
}

.dish-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  font-size: 24rpx;
}

.dish-name {
  flex: 1;
  color: #333;
}

.dish-quantity {
  color: #999;
  margin: 0 20rpx;
}

.dish-price {
  color: #FF6B6B;
}

.order-footer {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 1rpx solid #f0f0f0;
}

.order-total {
  display: flex;
  flex-direction: column;
}

.total-label {
  font-size: 22rpx;
  color: #999;
}

.total-price {
  font-size: 28rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.order-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  font-size: 24rpx;
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  border: none;
}

.action-btn.cancel {
  background: #f5f5f5;
  color: #666;
}

.action-btn.primary {
  background: #FF6B6B;
  color: #fff;
}

.order-remark {
  margin-top: 16rpx;
  padding: 12rpx;
  background: #FFF8E1;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.dish-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.dish-image {
  width: 140rpx;
  height: 140rpx;
  border-radius: 12rpx;
  overflow: hidden;
  position: relative;
  flex-shrink: 0;
}

.dish-image image {
  width: 100%;
  height: 100%;
}

.status-badge {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  font-size: 18rpx;
  padding: 4rpx 10rpx;
  border-radius: 10rpx;
}

.status-badge.online {
  background: #E8F5E9;
  color: #4CAF50;
}

.status-badge.offline {
  background: #FFEBEE;
  color: #F44336;
}

.status-badge.occupied {
  background: #FFF3E0;
  color: #FF9800;
}

.status-badge.idle {
  background: #E8F5E9;
  color: #4CAF50;
}

.dish-info {
  flex: 1;
  min-width: 0;
}

.dish-name-row {
  display: flex;
  align-items: center;
  gap: 10rpx;
}

.dish-name {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
}

.dish-tag {
  font-size: 18rpx;
  padding: 2rpx 8rpx;
  border-radius: 6rpx;
}

.dish-tag.hot {
  background: #FFEBEE;
  color: #F44336;
}

.dish-tag.new {
  background: #E3F2FD;
  color: #2196F3;
}

.dish-category {
  font-size: 22rpx;
  color: #999;
  margin-top: 6rpx;
}

.dish-price-row {
  display: flex;
  align-items: center;
  gap: 16rpx;
  margin-top: 10rpx;
}

.dish-price {
  font-size: 30rpx;
  font-weight: bold;
  color: #FF6B6B;
}

.spicy-level {
  font-size: 20rpx;
  color: #FF6B6B;
}

.dish-actions {
  display: flex;
  flex-direction: column;
  gap: 10rpx;
}

.offline-btn {
  background: #FFEBEE !important;
  color: #F44336 !important;
}

.online-btn {
  background: #E8F5E9 !important;
  color: #4CAF50 !important;
}

.delete-btn {
  background: #f5f5f5 !important;
  color: #999 !important;
}

.idle-btn {
  background: #E8F5E9 !important;
  color: #4CAF50 !important;
}

.occupy-btn {
  background: #FFF3E0 !important;
  color: #FF9800 !important;
}

.table-list {
  height: calc(100vh - 380rpx);
  padding: 20rpx;
}

.table-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.table-number {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.table-info {
  font-size: 24rpx;
  color: #666;
  margin-bottom: 16rpx;
  padding: 12rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
}

.info-label {
  color: #999;
}

.info-text {
  color: #333;
}

.table-actions {
  display: flex;
  gap: 16rpx;
}

.empty {
  text-align: center;
  padding: 100rpx 0;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
}

.add-first-btn {
  margin-top: 30rpx;
  background: #FF6B6B;
  color: #fff;
  font-size: 28rpx;
  padding: 16rpx 40rpx;
  border-radius: 30rpx;
  border: none;
}

.loading {
  text-align: center;
  padding: 40rpx;
}

.loading-text {
  font-size: 24rpx;
  color: #999;
}

.fab {
  position: fixed;
  right: 30rpx;
  bottom: 140rpx;
  width: 100rpx;
  height: 100rpx;
  background: #FF6B6B;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 20rpx rgba(255,107,107,0.4);
}

.fab-icon {
  font-size: 48rpx;
  color: #fff;
}

.logout-btn {
  position: fixed;
  bottom: 30rpx;
  left: 30rpx;
  right: 30rpx;
  height: 80rpx;
  background: #fff;
  color: #666;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 40rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}

.modal-container {
  position: fixed;
  left: 30rpx;
  right: 30rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 20rpx;
  z-index: 101;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
}

.modal-content {
  padding: 30rpx;
  max-height: 60vh;
}

.form-item {
  margin-bottom: 30rpx;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
}

.form-label.required::before {
  content: '*';
  color: #F44336;
  margin-right: 6rpx;
}

.form-input, .form-textarea {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-textarea {
  height: 150rpx;
}

.form-picker {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
}

.picker-arrow {
  color: #999;
}

.image-upload {
  width: 200rpx;
  height: 200rpx;
  background: #f5f5f5;
  border-radius: 12rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

.preview-image {
  width: 100%;
  height: 100%;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.upload-icon {
  font-size: 48rpx;
  color: #ccc;
}

.upload-text {
  font-size: 22rpx;
  color: #999;
  margin-top: 10rpx;
}

.switch-row {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.switch-row .form-label {
  margin-bottom: 0;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
}

.modal-btn {
  flex: 1;
  height: 90rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
  background: #fff;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #FF6B6B;
  font-weight: bold;
}