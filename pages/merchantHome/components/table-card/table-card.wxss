.table-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 16rpx;
  box-shadow: 0 2rpx 12rpx rgba(0,0,0,0.05);
  transition: all 0.3s ease;
}

.table-item:active {
  transform: scale(0.98);
}

.table-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.table-icon {
  width: 80rpx;
  height: 80rpx;
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  border-radius: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 4rpx 12rpx rgba(255,107,107,0.3);
}

.icon-text {
  font-size: 24rpx;
  font-weight: bold;
  color: #fff;
}

.table-status {
  font-size: 22rpx;
  padding: 8rpx 20rpx;
  border-radius: 20rpx;
  font-weight: 500;
}

.table-status.occupied {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  color: #F57C00;
}

.table-status.idle {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #388E3C;
}

.table-info {
  font-size: 22rpx;
  color: #666;
  margin-bottom: 16rpx;
  padding: 12rpx 16rpx;
  background: #f8f8f8;
  border-radius: 10rpx;
}

.info-label {
  color: #999;
}

.info-text {
  color: #333;
}

.table-qr {
  padding: 12rpx 16rpx;
  background: linear-gradient(135deg, #E3F2FD 0%, #BBDEFB 100%);
  border-radius: 10rpx;
  margin-bottom: 16rpx;
  text-align: center;
}

.qr-link {
  font-size: 24rpx;
  color: #1976D2;
}

.table-actions {
  display: flex;
  gap: 16rpx;
}

.action-btn {
  flex: 1;
  font-size: 22rpx;
  padding: 14rpx 0;
  border-radius: 24rpx;
  border: none;
  font-weight: 500;
}

.action-btn::after {
  border: none;
}

.idle-btn {
  background: linear-gradient(135deg, #E8F5E9 0%, #C8E6C9 100%);
  color: #388E3C;
}

.occupy-btn {
  background: linear-gradient(135deg, #FFF3E0 0%, #FFE0B2 100%);
  color: #F57C00;
}

.delete-btn {
  background: #f5f5f5;
  color: #999;
}