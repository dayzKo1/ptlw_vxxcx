.empty-container {
  text-align: center;
  padding: 80rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.empty-icon {
  width: 160rpx;
  height: 160rpx;
  background: linear-gradient(135deg, #f5f5f5 0%, #e0e0e0 100%);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 32rpx;
}

.icon {
  font-size: 64rpx;
  color: #ccc;
}

.empty-text {
  font-size: 28rpx;
  color: #999;
  margin-bottom: 32rpx;
}

.empty-btn {
  background: linear-gradient(135deg, #FF6B6B 0%, #FF8E8E 100%);
  color: #fff;
  font-size: 28rpx;
  padding: 20rpx 48rpx;
  border-radius: 32rpx;
  border: none;
  box-shadow: 0 4rpx 16rpx rgba(255,107,107,0.3);
}

.empty-btn::after {
  border: none;
}