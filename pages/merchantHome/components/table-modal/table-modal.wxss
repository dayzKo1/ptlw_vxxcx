.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
}

.modal-container {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 16rpx;
  z-index: 101;
  max-height: 80vh;
  display: flex;
  flex-direction: column;
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 40rpx;
  color: #999;
  line-height: 1;
}

.modal-content {
  padding: 20rpx 24rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
  background: #fff;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #FF6B6B;
  font-weight: bold;
}

.form-item {
  margin-bottom: 24rpx;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 10rpx;
  display: block;
}

.form-label.required::before {
  content: '*';
  color: #F44336;
  margin-right: 4rpx;
}

.form-input {
  width: 100%;
  padding: 16rpx;
  background: #f5f5f5;
  border-radius: 8rpx;
  font-size: 28rpx;
  box-sizing: border-box;
}

.form-tips {
  padding: 12rpx 16rpx;
  background: #FFF8E1;
  border-radius: 8rpx;
}

.tips-text {
  font-size: 22rpx;
  color: #FF9800;
}