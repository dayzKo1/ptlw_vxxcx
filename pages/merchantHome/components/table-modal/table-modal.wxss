.modal-mask {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(0,0,0,0.5);
  z-index: 100;
  animation: fadeIn 0.2s ease;
}

@keyframes fadeIn {
  from { opacity: 0; }
  to { opacity: 1; }
}

.modal-container {
  position: fixed;
  left: 32rpx;
  right: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  background: #fff;
  border-radius: 24rpx;
  z-index: 101;
  max-height: 85vh;
  display: flex;
  flex-direction: column;
  animation: slideUp 0.3s ease;
}

@keyframes slideUp {
  from { 
    opacity: 0;
    transform: translateY(-45%);
  }
  to { 
    opacity: 1;
    transform: translateY(-50%);
  }
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 28rpx 32rpx;
  border-bottom: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.modal-close {
  font-size: 44rpx;
  color: #999;
  line-height: 1;
  padding: 8rpx;
}

.modal-content {
  padding: 24rpx 32rpx;
}

.modal-footer {
  display: flex;
  border-top: 1rpx solid #f0f0f0;
  flex-shrink: 0;
}

.modal-btn {
  flex: 1;
  height: 88rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 30rpx;
  border: none;
  border-radius: 0;
  background: #fff;
  font-weight: 500;
}

.modal-btn::after {
  border: none;
}

.modal-btn.cancel {
  color: #666;
  border-right: 1rpx solid #f0f0f0;
}

.modal-btn.confirm {
  color: #FF6B6B;
  font-weight: bold;
}

.form-item {
  margin-bottom: 28rpx;
}

.form-label {
  font-size: 26rpx;
  color: #333;
  margin-bottom: 12rpx;
  display: block;
  font-weight: 500;
}

.form-label.required::before {
  content: '*';
  color: #F44336;
  margin-right: 6rpx;
}

.form-input {
  width: 100%;
  padding: 20rpx 24rpx;
  background: #f8f8f8;
  border-radius: 12rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 2rpx solid transparent;
  transition: all 0.2s ease;
}

.form-input:focus {
  background: #fff;
  border-color: #FF6B6B;
}

.form-tips {
  padding: 16rpx 20rpx;
  background: #FFF8E1;
  border-radius: 10rpx;
  margin-top: 16rpx;
}

.tips-text {
  font-size: 22rpx;
  color: #F57C00;
}