<view class="modal-mask" wx:if="{{show}}" bindtap="onClose"></view>
<view class="modal-container" wx:if="{{show}}">
  <view class="modal-header">
    <text class="modal-title">{{isEdit ? '编辑桌号' : '添加桌号'}}</text>
    <text class="modal-close" bindtap="onClose">×</text>
  </view>
  <scroll-view class="modal-content" scroll-y>
    <view class="form-item">
      <text class="form-label required">桌号</text>
      <input class="form-input" placeholder="请输入桌号，如：1号桌、包间A" value="{{formData.tableNumber}}" data-field="tableNumber" bindinput="onInput" />
    </view>
    <view class="form-item">
      <text class="form-label">二维码链接 (可选)</text>
      <input class="form-input" placeholder="可留空，系统自动生成" value="{{formData.qrCode}}" data-field="qrCode" bindinput="onInput" />
    </view>
    <view class="form-tips">
      <text class="tips-text">提示：保存后可在桌号管理中查看和打印二维码</text>
    </view>
  </scroll-view>
  <view class="modal-footer">
    <button class="modal-btn cancel" bindtap="onClose">取消</button>
    <button class="modal-btn confirm" bindtap="onSubmit">确定</button>
  </view>
</view>